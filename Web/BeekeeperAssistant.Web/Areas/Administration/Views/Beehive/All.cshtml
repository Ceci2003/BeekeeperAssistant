@model BeekeeperAssistant.Web.ViewModels.Administration.Beehives.AllBeehivesAdministrationViewModel
@{
    ViewData["Title"] = "Създадени кошера";
}

<div class="breadcrumb">
    <div class="aside-icon" onclick="asideBurgerMenuClick();">
        <i class="fas fa-bars"></i>
    </div>
    <ul class="breadcrumb-list">
        <li class="breadcrumb-item">
            <a asp-controller="Dashboard" asp-action="Index">Администрация</a>
        </li>
        <li class="breadcrumb-item active">@ViewData["Title"]</li>
    </ul>
    <ul class="breadcrumb-list responsive">
        <li class="breadcrumb-item">
            <a asp-controller="Dashboard" asp-action="Index">...</a>
        </li>
        <li class="breadcrumb-item active">Кошери</li>
    </ul>
    <div class="breadcrumb-leave">
        <form asp-area="Identity" asp-page="/Account/Logout"
            asp-route-returnUrl="@this.Url.Action("Index", "Home", new { area = string.Empty })">
            <button type="submit" class="exit"><i class="fas fa-sign-out-alt"></i></button>
        </form>
    </div>
</div>

<div class="content">
    <partial name="_StatusMessagePartial" />

    <h1 class="title-1">@ViewData["Title"]</h1>
    <table class="data-table administration">
        <thead>
            <tr>
                <th>Номер</th>
                <th>Пчелин</th>
                <th>Статус</th>
                <th>Опция</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var beehive in Model.AllBeehives)
            {
                <tr>
                    <td class="number" style="padding: 8px;">
                        @(beehive.Number)
                    </td>
                    <td>
                        @if (!beehive.IsDeleted)
                        {
                            <a asp-controller="Apiary" asp-action="ByNumber"
                               asp-route-apiaryNumber="@beehive.ApiaryNumber">@(beehive.ApiaryNumber)</a>
                        }
                        else
                        {
                            <a style="pointer-events: none; color: #110400;" asp-controller="Apiary" asp-action="ByNumber"
                               asp-route-apiaryNumber="@beehive.ApiaryNumber">@(beehive.ApiaryNumber)</a>
                        }
                    </td>
                    <td style="color: @if (beehive.IsDeleted) @("#d9695d") else @("#558b2f");">
                        @if (beehive.IsDeleted)
                        {
                            <div style="font-weight: 500;">Изтрит</div>
                        }
                        else
                        {
                            <div>Активен</div>
                        }
                    </td>
                    <td class="edit-delete" style="padding: 4px;">
                        @if (!beehive.IsDeleted)
                        {
                            <form method="post" asp-area="Administration" asp-controller="Beehive" asp-action="Delete"
                                  asp-route-id="@beehive.Id" asp-route-returnUrl="@this.Context.Request.Path">
                                <button type="submit" class="btn delete">Изтрий</button>
                            </form>
                        }
                        else
                        {
                            <form method="post" asp-area="Administration" asp-controller="Beehive" asp-action="Undelete"
                                  asp-route-id="@beehive.Id" asp-route-returnUrl="@this.Context.Request.Path">
                                <button type="submit" class="btn edit">Възстанови</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="pagination">
        <ul>
            @if (this.Model.CurrentPage == 1)
            {
                <li class="page-item disabled">
                    <span class="page-link">
                        <i class="fas fa-arrow-left"></i>
                    </span>
                </li>
            }
            else
            {
                <li class="page-item">
                    <a class="page-link" asp-area="Administration" asp-controller="Beehive" asp-action="All"
                       asp-route-page="@(this.Model.CurrentPage - 1)">
                        <i class="fas fa-arrow-left"></i>
                    </a>
                </li>
            }
            @for (int i = 1; i <= this.Model.PagesCount; i++)
            {
                @if (i == this.Model.CurrentPage)
                {
                    <li class="page-item active">
                        <span class="page-link">@i</span>
                    </li>
                }
                else
                {
                    <li class="page-item">
                        <a class="page-link" asp-area="Administration" asp-controller="Beehive" asp-action="All" asp-route-page="@i">@i</a>
                    </li>
                }
            }
            @if (this.Model.CurrentPage == this.Model.PagesCount)
            {
                <li class="page-item disabled">
                    <span class="page-link">
                        <i class="fas fa-arrow-right"></i>
                    </span>
                </li>
            }
            else
            {
                <li class="page-item">
                    <a class="page-link" asp-area="Administration" asp-controller="Beehive" asp-action="All"
                       asp-route-page="@(this.Model.CurrentPage + 1)">
                        <i class="fas fa-arrow-right"></i>
                    </a>
                </li>
            }
        </ul>
    </div>
</div>