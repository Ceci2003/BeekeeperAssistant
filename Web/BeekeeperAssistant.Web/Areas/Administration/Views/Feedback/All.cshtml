@model BeekeeperAssistant.Web.ViewModels.Feedbacks.AllFeedabacksAdministrationViewModel
@{
    this.ViewData["Title"] = "Отзиви, запитвания, доклади";
}

<div class="breadcrumb">
    <div class="aside-icon" onclick="asideBurgerMenuClick();">
        <i class="fas fa-bars"></i>
    </div>
    <ul class="breadcrumb-list">
        <li class="breadcrumb-item">
            <a asp-controller="Dashboard" asp-action="Index">Администрация</a>
        </li>
        <li class="breadcrumb-item active">@ViewData["Title"]</li>
    </ul>
    <ul class="breadcrumb-list responsive">
        <li class="breadcrumb-item">
            <a asp-controller="Dashboard" asp-action="Index">...</a>
        </li>
        <li class="breadcrumb-item active">Отзиви, запитвания...</li>
    </ul>
    <div class="breadcrumb-leave">
        <form asp-area="Identity" asp-page="/Account/Logout"
            asp-route-returnUrl="@this.Url.Action("Index", "Home", new { area = string.Empty })">
            <button type="submit" class="exit"><i class="fas fa-sign-out-alt"></i></button>
        </form>
    </div>
</div>

<div class="content">
    <h1 class="title-1">Всички отзиви</h1>
    <table class="data-table">
        <thead>
            <tr>
                <th>Заглавие</th>
                <th>От</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var feedback in Model.Feedbacks.AllFeedbacks)
            {
                <tr>
                    <td><a asp-area="Administration" asp-controller="Feedback" asp-action="ById" asp-route-id="@feedback.Id">@feedback.Title</a></td>
                    <td>@feedback.UserUsername</td>
                </tr>
            }
        </tbody>
    </table>
    @if (!Model.Feedbacks.AllFeedbacks.Any())
    {
        <p class="empty-row">няма отзиви</p>
    }
    <div class="pagination">
        <ul>
            @if (this.Model.Feedbacks.CurrentPage == 1)
            {
                <li class="page-item disabled">
                    <span class="page-link">
                        <i class="fas fa-arrow-left"></i>
                    </span>
                </li>
            }
            else
            {
                <li class="page-item">
                    <a class="page-link" asp-area="Administration" asp-controller="Feedback" asp-action="All"
                       asp-route-pageHelps="@Model.Helps.CurrentPage"
                       asp-route-pageFeedbacks="@(this.Model.Feedbacks.CurrentPage - 1)">
                        <i class="fas fa-arrow-left"></i>
                    </a>
                </li>
            }
            @for (int i = 1; i <= this.Model.Feedbacks.PagesCount; i++)
            {
                @if (i == this.Model.Feedbacks.CurrentPage)
                {
                    <li class="page-item active">
                        <span class="page-link">@i</span>
                    </li>
                }
                else
                {
                    <li class="page-item">
                        <a class="page-link" asp-area="Administration" asp-controller="Feedback" asp-action="All" asp-route-pageHelps="@Model.Helps.CurrentPage" asp-route-pageFeedbacks="@i">@i</a>
                    </li>
                }
            }
            @if (this.Model.Feedbacks.CurrentPage == this.Model.Feedbacks.PagesCount)
            {
                <li class="page-item disabled">
                    <span class="page-link">
                        <i class="fas fa-arrow-right"></i>
                    </span>
                </li>
            }
            else
            {
                <li class="page-item">
                    <a class="page-link" asp-area="Administration" asp-controller="Feedback" asp-action="All"
                       asp-route-pageHelps="@Model.Helps.CurrentPage"
                       asp-route-pageFeedbacks="@(this.Model.Feedbacks.CurrentPage + 1)">
                        <i class="fas fa-arrow-right"></i>
                    </a>
                </li>
            }
        </ul>
    </div>
