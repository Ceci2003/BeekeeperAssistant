@model BeekeeperAssistant.Web.ViewModels.Apiaries.ByNumberApiaryViewModel;
@using BeekeeperAssistant.Web.ViewModels.Shared

@{
    var title = "";
    if (!string.IsNullOrEmpty(Model.Number))
    {
        title += $"Пчелин № {Model.Number}";
    }
    else
    {
        title = Model.Name;
    }

    ViewData["Title"] = title;

    var onlyReadMsg = "намате достъп до панела за редктиране";

    string website = $"{this.Context.Request.Scheme}://{this.Context.Request.Host}{this.Context.Request.Path}";

    var navigation = new Dictionary<string, string>();
    navigation.Add("Табло", "/App");
    if (Model.ApiaryType == ApiaryType.Movable)
    {
        navigation.Add("Пчелини - подвижни", "/App/Apiary/AllMovable");
    }
    else
    {
        navigation.Add("Пчелини - основни", "/App/Apiary/All");
    }
    navigation.Add(ViewData["Title"].ToString(), null);

    var breadcrumbNav = new BreadcrumbModel
    {
        Navigation = navigation,
    };
}

<partial model="@breadcrumbNav" name="_BreadcrumbPartial" />

<h1 class="tab-title title-1">@ViewData["Title"]</h1>
<div class="tab apiary">
    <a class="tablinks active" asp-controller="Apiary" asp-action="ById" asp-route-id="@Model.Id">
        <i class="fas fa-boxes"></i>
        <span class="text">
            @ViewData["Title"]
        </span>
    </a>
    @if (Model.ApiaryType == ApiaryType.Movable)
    {
        <a class="tablinks" asp-controller="Beehive" asp-action="AllByMovableApiaryId" asp-route-id="@Model.Id">
            <i class="fas fa-border-all"></i>
            <span class="text">
                Кошери
            </span>
        </a>
    }
    else
    {
        <a class="tablinks" asp-controller="Beehive" asp-action="AllByApiaryId" asp-route-id="@Model.Id">
            <i class="fas fa-border-all"></i>
            <span class="text">
                Кошери
            </span>
        </a>
    }
    <a class="tablinks" asp-controller="ApiaryNote" asp-action="AllByApiaryId" asp-route-id="@Model.Id">
        <i class="fas fa-sticky-note"></i>
        <span class="text">
            Бележки
        </span>
    </a>
    <a class="tablinks" asp-controller="ApiaryDiary" asp-action="ByApiaryId" asp-route-id="@Model.Id">
        <i class="fas fa-book"></i>
        <span class="text">
            Дневник
        </span>
    </a>
</div>

<div class="tabs-body">
    <partial name="_StatusMessagePartial" />
    <div class="page-controls one intab">
        @if (Model.ApiaryType == ApiaryType.Movable)
        {
            <a class="btn @if (Model.IsClosed) { @("light-green") } else { @("queen") }" asp-controller="Apiary"
            asp-action="UpdateMovableStatus" asp-route-id="@Model.Id">
                @if (Model.IsClosed)
                {
                    <i class="fas fa-lock-open"></i>
                    @("Отвори пчелина")
                }
                else
                {
                    <i class="fas fa-lock"></i>
                    @("Затвори пчелина")
                }
            </a>
        }
    </div>
    <div id="Apiary" class="tabcontent" style="display: block">
        <div class="data-view">
            <div class="qr-code">
                <a class="qr-code-print" href="javascript:printQRCode();">
                    <i class="fas fa-print"></i>
                    отпечатай кода
                </a>
                <img id="qr-code-img" src="https://api.qrserver.com/v1/create-qr-code/?data=@website&size=255x255"
                    alt="ApiaryQrCode" width="250" height="250">
            </div>
            <div class="apiary-info">
                <table>
                    <tbody>
                        <tr>
                            <th scope="row">Номер:</th>
                            <td id="apiary-num">
                                @if (string.IsNullOrEmpty(Model.Number))
                                {
                                    @("-")
                                }
                                else
                                {
                                    @Model.Number
                                }
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">Име:</th>
                            <td>@Model.Name</td>
                        </tr>
                        <tr>
                            <th scope="row">Вид:</th>
                            <td>@Html.DisplayFor(x => Model.ApiaryType)</td>
                        </tr>
                        <tr>
                            <th scope="row">Местоположение:</th>
                            <td>@Model.Adress</td>
                        </tr>
                        @if (Model.ApiaryType == ApiaryType.Movable)
                        {
                            <tr>
                                <th scope="row">Статус:</th>
                                <td>
                                    @if (Model.IsClosed)
                                    {
                                        @("затворен")
                                    }
                                    else
                                    {
                                        <strong>
                                            @("отворен")
                                        </strong>
                                    }
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">Дата на отваряне:</th>
                                <td>@Model.OpeningDate.ToString("dd-MM-yyyy")</td>
                            </tr>
                            <tr>
                                <th scope="row">Дата на затваряне:</th>
                                <td>@Model.ClosingDate.ToString("dd-MM-yyyy")</td>
                            </tr>
                        }
                        @if (Model.Creator.UserName != this.User.Identity.Name)
                        {
                            <tr>
                                <th scope="row">Собственик:</th>
                                <td>@Model.Creator.UserName</td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="data-edit">
                    @if (Model.ApiaryAccess == Access.ReadWrite)
                    {
                        <a class="btn edit" asp-action="Edit" asp-route-id="@Model.Id">Редактирай</a>
                        <form asp-controller="Apiary" asp-action="Delete" asp-route-id="@Model.Id">
                            <input class="btn delete" type="submit" value="Изтрий" />
                        </form>
                    }
                    else
                    {
                        <p>@onlyReadMsg</p>
                    }
                </div>
            </div>
            <div class="weather">
                @if (@Model.ForecastResult == null)
                {
                    <div>
                        @*<p style="font-size: 18px; color: red; text-align: center;">Населеното място <br>не е намерено</p>*@
                        <p style="font-size: 18px; color: red; text-align: center;">В момента не може<br>да бъде изготвена<br>прогноза.</p>
                    </div>
                }
                else
                {
                    string imgPath = Model.ForecastResult.WeatherIcon + ".png";
                    <div>
                        <img src="~/img/weather/@imgPath" alt="">
                        <div>
                            <p>Температура: @Model.ForecastResult.Temp°</p>
                            <p>Влажност: @Model.ForecastResult.Humidity%</p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
