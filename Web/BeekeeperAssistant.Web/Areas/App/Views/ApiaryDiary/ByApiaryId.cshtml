@model BeekeeperAssistant.Web.ViewModels.ApiaryDiaries.ByApiaryIdApiaryDiaryViewModel
@using BeekeeperAssistant.Web.ViewModels.Shared

@{
    var title = "";
    if (!string.IsNullOrEmpty(Model.ApiaryNumber))
    {
        title += $"Пчелин № {Model.ApiaryNumber}";
    }
    else
    {
        title = Model.ApiaryName;
    }

    ViewData["Title"] = title;

    var navigation = new Dictionary<string, string>();
    navigation.Add("Табло", "/App");
    @if (Model.ApiaryApiaryType == ApiaryType.Movable)
    {
        navigation.Add("Пчелини - подвижни", "/App/Apiary/AllMovable");
    }
    else
    {
        navigation.Add("Пчелини - основни", "/App/Apiary/All");
    }
    navigation.Add(ViewData["Title"].ToString(), null);

    var breadcrumbNav = new BreadcrumbModel
    {
        Navigation = navigation,
    };
}

<partial model="@breadcrumbNav" name="_BreadcrumbPartial" />

<h1 class="tab-title title-1">@ViewData["Title"]</h1>
<div class="tab apiary">
    <a class="tablinks" asp-controller="Apiary" asp-action="ById" asp-route-id="@Model.ApiaryId">
        <i class="fas fa-boxes"></i>
        <span class="text">
            @ViewData["Title"]
        </span>
    </a>
    @if (Model.ApiaryApiaryType == ApiaryType.Movable)
    {
        <a class="tablinks" asp-controller="Beehive" asp-action="AllByMovableApiaryId" asp-route-id="@Model.ApiaryId">
            <i class="fas fa-border-all"></i>
            <span class="text">
                Кошери
            </span>
        </a>
    }
    else
    {
        <a class="tablinks" asp-controller="Beehive" asp-action="AllByApiaryId" asp-route-id="@Model.ApiaryId">
            <i class="fas fa-border-all"></i>
            <span class="text">
                Кошери
            </span>
        </a>
    }
    <a class="tablinks" asp-controller="ApiaryNote" asp-action="AllByApiaryId" asp-route-id="@Model.ApiaryId">
        <i class="fas fa-sticky-note"></i>
        <span class="text">
            Бележки
        </span>
    </a>
    <a class="tablinks active" asp-controller="ApiaryDiary" asp-action="ByApiaryId" asp-route-id="@Model.ApiaryId">
        <i class="fas fa-book"></i>
        <span class="text">
            Дневник
        </span>
    </a>
</div>

<div class="tabs-body">
    <partial name="_StatusMessagePartial" />
    <div class="tabcontent">
        <div id="Diary" class="tabcontent" style="display: block">
            <form asp-controller="ApiaryDiary" asp-action="Save" asp-route-id="@Model.ApiaryId">
                <div class="btn-group">
                    <button class="btn edit save" type="submit">
                        <i class="far fa-save"></i>
                        Запази
                    </button>
                </div>
                <textarea asp-for="@Model.Content" id="tiny">@Model.SanitizedContent</textarea>
            </form>
        </div>
    </div>
</div>

@section Scripts
{
<script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
<script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5/jquery.tinymce.min.js" referrerpolicy="origin"></script>
<script>

    $('textarea#tiny').tinymce({
        height: 650,
        menubar: false,
        plugins: [
            'advlist autolink lists link image charmap print preview anchor',
            'searchreplace visualblocks code fullscreen',
            'insertdatetime media table paste code help wordcount table'
        ],
        toolbar: 'undo redo | formatselect | bold italic underline strikethrough subscript superscript | fontsizeselect backcolor forecolor | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | removeformat | table tabledelete | help',
        toolbar_mode: 'wide'
    });
</script>
}
