@model BeekeeperAssistant.Web.ViewModels.Beehives.AllBeehiveViewModel;
@inject BeekeeperAssistant.Services.IStringManipulationService stringManipulation;
@{
    ViewData["Title"] = "Кошери - всички";
    string hasDevice = "has-device";
    Dictionary<string, string> powerClasses = new Dictionary<string, string>();
    powerClasses.Add("weak", "td-weak");
    powerClasses.Add("medium", "td-medium");
    powerClasses.Add("strong", "td-strong");
    string yesText = "Да";
    string noText = "Не";
    var orderBy = this.Context.Request.Query["orderBy"].ToString();
}

<div class="breadcrumb">
    <div class="aside-icon" onclick="asideBurgerMenuClick();">
        <i class="fas fa-bars"></i>
    </div>
    <ul class="breadcrumb-list">
        <li class="breadcrumb-item">
            <a asp-controller="Home" asp-action="Index">Табло</a>
        </li>
        <li class="breadcrumb-item active">@ViewData["Title"]</li>
    </ul>
    <ul class="breadcrumb-list responsive">
        <li class="breadcrumb-item">
            <a asp-controller="Home" asp-action="Index">Табло</a>
        </li>
        <li class="breadcrumb-item active">Кошери</li>
    </ul>
    <div class="breadcrumb-leave">
        <form asp-area="Identity" asp-page="/Account/Logout"
            asp-route-returnUrl="@this.Url.Action("Index", "Home", new { area = string.Empty })">
            <button type="submit" class="exit"><i class="fas fa-sign-out-alt"></i></button>
        </form>
    </div>
</div>

<div class="content">
    <h1 class="title-1">@ViewData["Title"]</h1>
    <div class="page-controls">
        <a class="export-file excel" asp-controller="Beehive" asp-action="ExportToExcel">
            <i class="fas fa-file-download"></i> Excel
        </a>
        <a class="btn beehive-create" asp-controller="Beehive" asp-action="Create">
            <i class="fas fa-plus-square pr-2"></i>
            Създай кошер
        </a>
    </div>
    <table class="data-table all-table">
        <colgroup>
            <col class="@stringManipulation.Slugify("Apiary.Number")" />
            <col class="@stringManipulation.Slugify(nameof(Beehive.Number))" />
            <col class="@stringManipulation.Slugify(nameof(Beehive.IsItMovable))" />
            <col class="@stringManipulation.Slugify(nameof(Beehive.BeehiveType))" />
            <col class="@stringManipulation.Slugify(nameof(Beehive.BeehiveSystem))" />
            <col class="@stringManipulation.Slugify(nameof(Beehive.BeehivePower))" />
        </colgroup>
        <thead>
            <tr>
                <th>
                    <a class="@stringManipulation.Slugify("Apiary.Number")" asp-controller="Beehive" asp-action="All" asp-route-page="@Model.CurrentPage"
                        asp-route-orderBy="@stringManipulation.Slugify("Apiary.Number")">
                        Номер на пчелин
                    </a>
                </th>
                <th>
                    <a class="@stringManipulation.Slugify(nameof(Beehive.Number))" asp-controller="Beehive" asp-action="All" asp-route-page="@Model.CurrentPage"
                        asp-route-orderBy="@stringManipulation.Slugify(nameof(Beehive.Number))">
                        Номер
                    </a>
                </th>
                <th>
                    <a class="@stringManipulation.Slugify(nameof(Beehive.IsItMovable))" asp-controller="Beehive" asp-action="All" asp-route-page="@Model.CurrentPage"
                        asp-route-orderBy="@stringManipulation.Slugify(nameof(Beehive.IsItMovable))">
                        Подвижен
                    </a>
                </th>
                <th>
                    <a class="@stringManipulation.Slugify(nameof(Beehive.BeehiveType))" asp-controller="Beehive" asp-action="All" asp-route-page="@Model.CurrentPage"
                        asp-route-orderBy="@stringManipulation.Slugify(nameof(Beehive.BeehiveType))">
                        Вид
                    </a>
                </th>
                <th>
                    <a class="@stringManipulation.Slugify(nameof(Beehive.BeehiveSystem))" asp-controller="Beehive" asp-action="All" asp-route-page="@Model.CurrentPage"
                        asp-route-orderBy="@stringManipulation.Slugify(nameof(Beehive.BeehiveSystem))">
                        Система
                    </a>
                </th>
                <th>
                    <a class="@stringManipulation.Slugify(nameof(Beehive.BeehivePower))" asp-controller="Beehive" asp-action="All" asp-route-page="@Model.CurrentPage"
                        asp-route-orderBy="@stringManipulation.Slugify(nameof(Beehive.BeehivePower))">
                        Сила
                    </a>
                </th>
                <th>Редактиране</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var beehive in Model.AllBeehives)
            {
                <tr class="@if (beehive.HasDevice == true) { @hasDevice }">
                    <td class="number">
                        <a asp-controller="Apiary" asp-action="ById" asp-route-id="@beehive.Apiary.Id">
                            @if (beehive.Apiary.Number != null)
                            {
                                @beehive.Apiary.Number
                            }
                            else
                            {
                                @beehive.Apiary.Name
                            }
                        </a>
                    </td>
                    <td class="number">
                        <a asp-controller="Beehive" asp-action="ById" asp-route-id="@beehive.Id">
                            @if (beehive.MarkFlagType != null)
                            {
                                <div class="table-number-flag-mark">
                                    @beehive.Number
                                    <i class="fas fa-flag table-flag-mark-@beehive.MarkFlagType"></i>
                                </div>
                            }
                            else
                            {
                                @beehive.Number
                            }
                        </a>
                    </td>
                    <td>
                        @if (beehive.IsItMovable)
                        {
                            @yesText
                        }
                        else
                        {
                            @noText
                        }
                    </td>
                    <td>@Html.DisplayFor(x => beehive.BeehiveType)</td>
                    <td>@Html.DisplayFor(x => beehive.BeehiveSystem)</td>
                    <td class="@powerClasses[beehive.BeehivePower.ToString().ToLower()]">
                        <strong>@Html.DisplayFor(x => beehive.BeehivePower)</strong>
                    </td>
                    <td class="edit">
                        <div class="edit-container">
                            <a class="mark" title="Отбележи кошера" asp-controller="Beehive" asp-action="Bookmark" asp-route-id="@beehive.Id"
                            asp-route-returnUrl="@this.Context.Request.Path">
                                <i class="@(beehive.IsBookMarked ? "fas " : "far") fa-bookmark"></i>
                            </a>
                            <a class="edit" title="Редактирай кошера" asp-controller="Beehive" asp-action="Edit" asp-route-id="@beehive.Id">
                                <i class="far fa-edit"></i>
                            </a>

                            <a class="delete" title="Изтрий кошера" onclick="ShowDeleteForm('@beehive.Number-@beehive.Apiary.Id')">
                                <i class="far fa-trash-alt"></i>
                            </a>
                            <div id="@beehive.Number-@beehive.Apiary.Id" class="delete-form-display">
                                <form id="form-@beehive.Id" asp-controller="Beehive" asp-action="Delete"
                                asp-route-id="@beehive.Id">
                                    <a class="delete close" onclick="HideDeleteForm('@beehive.Number-@beehive.Apiary.Id')">
                                        <i class="fas fa-times"></i>
                                    </a>
                                    <p>
                                        Сигурни ли сте че искате да изтриете кошер
                                        <strong>
                                            №@beehive.Number
                                        </strong>
                                        в пчелин
                                        <strong>
                                            @if (beehive.Apiary.Number != null)
                                            {
                                                @beehive.Apiary.Number
                                            }
                                            else
                                            {
                                                @beehive.Apiary.Name
                                            }
                                        </strong>
                                        ?
                                    </p>

                                    <button type="submit" class="delete">
                                        Изтрий <i class="far fa-trash-alt"></i>
                                    </button>
                                </form>
                                <div class="content-cover" onclick="HideDeleteForm('@beehive.Number-@beehive.Apiary.Id')">
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="all-table-responsive">
        <table>
            <thead>
                <tr>
                    <th>Параметър</th>
                    <th>Стойност</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var beehive in Model.AllBeehives)
                {
                    <tr>
                        <td>Номер на пчелин</td>
                        <td class="number">
                            <a asp-controller="Apiary" asp-action="ById" asp-route-id="@beehive.Apiary.Id">
                                @if (beehive.Apiary.Number != null)
                                {
                                    @beehive.Apiary.Number
                                }
                                else
                                {
                                    @beehive.Apiary.Name
                                }
                            </a>
                        </td>
                    </tr>
                    <tr>
                        <td>Номер</td>
                        <td class="number">
                            <a asp-controller="Beehive" asp-action="ById" asp-route-id="@beehive.Id">
                                @if (beehive.MarkFlagType != null)
                                {
                                    <div class="table-number-flag-mark">
                                        @beehive.Number
                                        <i class="fas fa-flag table-flag-mark-@beehive.MarkFlagType"></i>
                                    </div>
                                }
                                else
                                {
                                    @beehive.Number
                                }
                            </a>
                        </td>
                    </tr>
                    <tr>
                        <td>Подвижен</td>
                        <td>
                            @if (beehive.IsItMovable)
                            {
                                @yesText
                            }
                            else
                            {
                                @noText
                            }
                        </td>
                    </tr>
                    <tr>
                        <td>Вид</td>
                        <td>@Html.DisplayFor(x => beehive.BeehiveType)</td>
                    </tr>
                    <tr>
                        <td>Система</td>
                        <td>@Html.DisplayFor(x => beehive.BeehiveSystem)</td>
                    </tr>
                    <tr>
                        <td>Сила</td>
                        <td class="@powerClasses[beehive.BeehivePower.ToString().ToLower()]">
                            <strong>@Html.DisplayFor(x => beehive.BeehivePower)</strong>
                        </td>
                    </tr>
                    <tr class="edit-row">
                        <td>Редактиране</td>
                        <td class="edit">
                            <div class="edit-container">
                                <a class="mark" title="Отбележи кошера" asp-controller="Beehive" asp-action="Bookmark" asp-route-id="@beehive.Id"
                                asp-route-returnUrl="@this.Context.Request.Path">
                                    <i class="@(beehive.IsBookMarked ? "fas " : "far") fa-bookmark"></i>
                                </a>
                                <a class="edit" title="Редактирай кошера" asp-controller="Beehive" asp-action="Edit" asp-route-id="@beehive.Id">
                                    <i class="far fa-edit"></i>
                                </a>

                                <a class="delete" title="Изтрий кошера" onclick="ShowDeleteForm('@beehive.Number-@beehive.Apiary.Id-responsive')">
                                    <i class="far fa-trash-alt"></i>
                                </a>
                                <div id="@beehive.Number-@beehive.Apiary.Id-responsive" class="delete-form-display">
                                    <form id="form-@beehive.Id" asp-controller="Beehive" asp-action="Delete"
                                    asp-route-id="@beehive.Id">
                                        <a class="delete close"
                                        onclick="HideDeleteForm('@beehive.Number-@beehive.Apiary.Id-responsive')">
                                            <i class="fas fa-times"></i>
                                        </a>
                                        <p>
                                            Сигурни ли сте че искате да изтриете кошер
                                            <strong>
                                                №@beehive.Number
                                            </strong>
                                            в пчелин
                                            <strong>
                                                @if (beehive.Apiary.Number != null)
                                                {
                                                    @beehive.Apiary.Number
                                                }
                                                else
                                                {
                                                    @beehive.Apiary.Name
                                                }
                                            </strong>
                                            ?
                                        </p>

                                        <button type="submit" class="delete">
                                            Изтрий <i class="far fa-trash-alt"></i>
                                        </button>
                                    </form>
                                    <div class="content-cover"
                                    onclick="HideDeleteForm('@beehive.Number-@beehive.Apiary.Id-responsive')"></div>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    @if (!Model.AllBeehives.Any())
    {
        <p class="empty-row">няма добавени кошери</p>
    }
    <div class="pagination">
        <ul>
            @if (this.Model.CurrentPage == 1)
            {
                <li class="page-item disabled">
                    <span class="page-link">
                        <i class="fas fa-arrow-left"></i>
                    </span>
                </li>
            }
            else
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="Beehive" asp-action="All"
                    asp-route-page="@(this.Model.CurrentPage - 1)" asp-route-orderBy="@orderBy">
                        <i class="fas fa-arrow-left"></i>
                    </a>
                </li>
            }
            @for (int i = 1; i <= this.Model.PagesCount; i++)
            {
                @if (i == this.Model.CurrentPage)
                {
                    <li class="page-item active">
                        <span class="page-link">@i</span>
                    </li>
                }
                else
                {
                    <li class="page-item">
                        <a class="page-link" asp-controller="Beehive" asp-action="All" asp-route-page="@i"
                    asp-route-orderBy="@orderBy">@i</a>
                    </li>
                }
            }
            @if (this.Model.CurrentPage == this.Model.PagesCount)
            {
                <li class="page-item disabled">
                    <span class="page-link">
                        <i class="fas fa-arrow-right"></i>
                    </span>
                </li>
            }
            else
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="Beehive" asp-action="All"
                    asp-route-page="@(this.Model.CurrentPage + 1)" asp-route-orderBy="@orderBy">
                        <i class="fas fa-arrow-right"></i>
                    </a>
                </li>
            }
        </ul>
    </div>
    <div class="table-legend">
        @*<p>Легенда</p>*@
        <ul>
            <li class="beehive-with-device">
                <span></span> - кошерът е с апарат
            </li>
        </ul>
    </div>
</div>
