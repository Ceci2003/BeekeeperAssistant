@model BeekeeperAssistant.Web.ViewModels.Beehives.AllByMovableApiaryIdBeehiveViewModel
@{
    var title = "";
    if (!string.IsNullOrEmpty(Model.ApiaryNumber))
    {
        title += $"Пчелин № {Model.ApiaryNumber}";
    }
    else
    {
        title = Model.ApiaryName;
    }

    ViewData["Title"] = title;

    string hasDevice = "has-device";
    var powerClasses = new Dictionary<string, string>
    {
        ["weak"] = "td-weak",
        ["medium"] = "td-medium",
        ["strong"] = "td-strong",

    };
    var onlyReadMsg = "нямате достъп";
}

<div class="breadcrumb">
    <div class="aside-icon" onclick="asideBurgerMenuClick();">
        <i class="fas fa-bars"></i>
    </div>
    <ul class="breadcrumb-list">
        <li class="breadcrumb-item">
            <a asp-controller="Home" asp-action="Index">Табло</a>
        </li>
        <li class="breadcrumb-item">
            <a asp-controller="Apiary" asp-action="All">Пчелини - всички</a>
        </li>
        <li class="breadcrumb-item active">@ViewData["Title"]</li>
    </ul>
    <ul class="breadcrumb-list responsive">
        <li class="breadcrumb-item">
            <a asp-controller="Home" asp-action="Index">...</a>
        </li>
        <li class="breadcrumb-item">
            <a asp-controller="Apiary" asp-action="All">Пчелини</a>
        </li>
        <li class="breadcrumb-item active">
            @if (!string.IsNullOrEmpty(Model.ApiaryNumber))
            {
                @Model.ApiaryNumber
            }
            else
            {
                @Model.ApiaryName
            }
        </li>
    </ul>
    <div class="breadcrumb-leave">
        <form asp-area="Identity" asp-page="/Account/Logout"
              asp-route-returnUrl="@this.Url.Action("Index", "Home", new { area = string.Empty })">
            <button type="submit" class="exit"><i class="fas fa-sign-out-alt"></i></button>
        </form>
    </div>
</div>

<h1 class="tab-title title-1">@ViewData["Title"]</h1>
<div class="tab apiary">
    <a class="tablinks" asp-controller="Apiary" asp-action="ById" asp-route-id="@Model.ApiaryId">
        <i class="fas fa-boxes"></i>
        <span class="text">
            @ViewData["Title"]
        </span>
    </a>
    <a class="tablinks active" asp-controller="Beehive" asp-action="AllByMovableApiaryId" asp-route-id="@Model.ApiaryId">
        <i class="fas fa-border-all"></i>
        <span class="text">
            Кошери
        </span>
    </a>
    <a class="tablinks" asp-controller="ApiaryNote" asp-action="AllByApiaryId" asp-route-id="@Model.ApiaryId">
        <i class="fas fa-sticky-note"></i>
        <span class="text">
            Бележки
        </span>
    </a>
    <a class="tablinks" asp-controller="ApiaryDiary" asp-action="ByApiaryId" asp-route-id="@Model.ApiaryId">
        <i class="fas fa-book"></i>
        <span class="text">
            Дневник
        </span>
    </a>
</div>

<div class="tabs-body">
    <partial name="_StatusMessagePartial" />
    <div class="tabcontent">
        <div class="page-controls one">
            @* <a class="export-file excel" asp-controller="Beehive" asp-action="ExportToExcel" asp-route-id="@Model.Id">
                <i class="fas fa-file-download"></i> Excel
            </a> *@
            @if (Model.ApiaryAccess == Access.ReadWrite)
            {
                <a class="btn beehive-create" onclick="showInput();">
                    <i class="fas fa-plus-square pr-2"></i>
                    Добави кошер
                </a>
                <div id="add-beehive-type" class="add-beehive-type" style="display:none;">
                    <div class="input-box">
                        <div class="close">
                            <a onclick="hideInput();">
                                <i class="fas fa-times"></i>
                            </a>
                        </div>
                        <div class="input-group">
                            <a class="btn beehive-create add-new" asp-controller="Beehive" asp-action="Create" asp-route-id="@Model.ApiaryId">
                                <i class="fas fa-plus-square pr-2"></i>
                                Добави нов
                            </a>
                            <a class="btn light-green add-existing" asp-controller="Apiary" asp-action="SelectApiaryToAddBeehiveInTemporary" asp-route-id="@Model.ApiaryId">
                                <i class="fas fa-archive"></i>
                                Добави съществуващ
                            </a>
                        </div>
                    </div>
                    <div id="input-back" onclick="hideInput();"></div>
                </div>
            }
        </div>
        <table class="data-table all-table">
            <thead>
                <tr>
                    <th>Пчелин</th>
                    <th>Номер</th>
                    <th>Вид</th>
                    <th>Система</th>
                    <th>Сила</th>
                    <th>Редактиране</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var beehive in Model.AllBeehives)
                {
                <tr class="@if (beehive.BeehiveHasDevice == true) {@hasDevice}">
                    <td class="number">
                        <a asp-controller="Apiary" asp-action="ById" asp-route-id="@beehive.ApiaryId">
                            @if (beehive.BeehiveApiaryNumber == null)
                            {
                                @beehive.BeehiveApiaryName
                            }
                            else
                            {
                                @beehive.BeehiveApiaryNumber
                            }
                        </a>
                    </td>
                    <td class="number">
                        <a asp-controller="Beehive" asp-action="ById" asp-route-id="@beehive.BeehiveId">@beehive.BeehiveNumber</a>
                    </td>
                    <td>@Html.DisplayFor(x => beehive.BeehiveBeehiveType)</td>
                    <td>@Html.DisplayFor(x => beehive.BeehiveBeehiveSystem)</td>
                    <td class="@powerClasses[beehive.BeehiveBeehivePower.ToString().ToLower()]">
                        @Html.DisplayFor(x => beehive.BeehiveBeehivePower)
                    </td>
                    <td class="edit">
                        <div class="edit-container">
                            @if (beehive.BeehiveBeehiveAccess == Access.ReadWrite)
                            {
                                <a class="mark" asp-controller="Beehive" asp-action="Bookmark" asp-route-id="@beehive.BeehiveId"
                                   asp-route-returnUrl="@this.Context.Request.Path">
                                    <i class="@(beehive.BeehiveIsBookMarked ? "fas " : "far") fa-bookmark"></i>
                                </a>
                                <a class="edit" asp-controller="Beehive" asp-action="Edit" asp-route-id="@beehive.BeehiveId">
                                    <i class="far fa-edit"></i>
                                </a>
                                <a class="delete" onclick="ShowDeleteForm('@beehive.BeehiveId')">
                                    <i class="far fa-trash-alt"></i>
                                </a>
                                <div id="@beehive.BeehiveId" class="delete-form-display">
                                    <form method="post" id="form-@beehive.BeehiveId" asp-controller="Beehive" asp-action="Delete"
                                          asp-route-id="@beehive.BeehiveId">
                                        <a class="delete close" onclick="HideDeleteForm('@beehive.BeehiveId')">
                                            <i class="fas fa-times"></i>
                                        </a>
                                        <p>
                                            Сигурни ли сте че искате да изтриете кошер
                                            <strong>№@beehive.BeehiveNumber</strong>?
                                        </p>
                                        <button type="submit" class="delete">
                                            Изтрий <i class="far fa-trash-alt"></i>
                                        </button>
                                    </form>
                                    <div id="@beehive.BeehiveId-back" class="content-cover"
                                         onclick="HideDeleteForm('@beehive.BeehiveId')"></div>
                                </div>
                            }
                            else
                            {
                                @onlyReadMsg
                            }
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>

        <div class="all-table-responsive beehive">
            <table>
                <thead>
                <th>Параметър</th>
                <th>Стойност</th>
                </thead>
                <tbody>
                    @foreach (var beehive in Model.AllBeehives)
                    {
                        <tr>
                            <th>Пчелин</th>
                            <td class="number">
                                <a asp-controller="Apiary" asp-action="ById" asp-route-id="@beehive.ApiaryId">@beehive.BeehiveApiaryNumber</a>
                            </td>
                        </tr>
                        <tr class="@if (beehive.BeehiveHasDevice == true) {@hasDevice}">
                            <td>Номер</td>
                            <td class="number">
                                <a asp-controller="Beehive" asp-action="ById" asp-route-id="@beehive.BeehiveId">@beehive.BeehiveNumber</a>
                            </td>
                        </tr>
                        <tr>
                            <td>Вид</td>
                            <td>@Html.DisplayFor(x => beehive.BeehiveBeehiveType)</td>
                        </tr>
                        <tr>
                            <td>Система</td>
                            <td>@Html.DisplayFor(x => beehive.BeehiveBeehiveSystem)</td>
                        </tr>
                        <tr>
                            <td>Сила</td>
                            <td class="@powerClasses[beehive.BeehiveBeehivePower.ToString().ToLower()]">
                                @Html.DisplayFor(x => beehive.BeehiveBeehivePower)
                            </td>
                        </tr>
                        <tr>
                            <td>Майка</td>
                            <td>
                                @if (beehive.BeehiveQueenId.HasValue)
                                {
                                    @Html.DisplayFor(x => beehive.BeehiveQueenColor)
                                }
                                else
                                {
                                    <strong>няма</strong>
                                }
                            </td>
                        </tr>
                        @if (beehive.BeehiveQueenId.HasValue)
                        {
                            <tr>
                                <td>Придадена на</td>
                                <td>
                                    @beehive.BeehiveQueenGivingDate.Value.ToString("ddd dd - MMM - yyyy")
                                </td>
                            </tr>
                        }
                        <tr class="edit-row">
                            <td>Редактиране</td>
                            <td class="edit">
                                <div class="edit-container">
                                    @if (beehive.BeehiveBeehiveAccess == Access.ReadWrite)
                                    {
                                        <a class="mark" asp-controller="Beehive" asp-action="Bookmark"
                                           asp-route-id="@beehive.BeehiveId" asp-route-returnUrl="@this.Context.Request.Path">
                                            <i class="@(beehive.BeehiveIsBookMarked ? "fas " : "far") fa-bookmark"></i>
                                        </a>
                                        <a class="edit" asp-controller="Beehive" asp-action="Edit" asp-route-id="@beehive.BeehiveId">
                                            <i class="far fa-edit"></i>
                                        </a>
                                        <a class="delete" onclick="ShowDeleteForm('@beehive.BeehiveId-responsive')">
                                            <i class="far fa-trash-alt"></i>
                                        </a>
                                        <div id="@beehive.BeehiveId-responsive" class="delete-form-display">
                                            <form method="post" id="form-@beehive.BeehiveId" asp-controller="Beehive"
                                                  asp-action="Delete" asp-route-id="@beehive.BeehiveId">
                                                <a class="delete close"
                                                   onclick="HideDeleteForm('@beehive.BeehiveId-responsive')">
                                                    <i class="fas fa-times"></i>
                                                </a>
                                                <p>
                                                    Сигурни ли сте че искате да изтриете кошер
                                                    <strong>№@beehive.BeehiveNumber</strong>?
                                                </p>
                                                <button type="submit" class="delete">
                                                    Изтрий <i class="far fa-trash-alt"></i>
                                                </button>
                                            </form>
                                            <div id="@beehive.BeehiveId-back" class="content-cover"
                                                 onclick="HideDeleteForm('@beehive.BeehiveId-responsive')"></div>
                                        </div>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        @if (!Model.AllBeehives.Any())
        {
            <p class="empty-row">пчелинът няма добавени кошери</p>
        }
        <div class="pagination">
            <ul>
                @if (this.Model.CurrentPage == 1)
                {
                    <li class="page-item disabled">
                        <span class="page-link">
                            <i class="fas fa-arrow-left"></i>
                        </span>
                    </li>
                }
                else
                {
                    <li class="page-item">
                        <a class="page-link" asp-controller="Beehive" asp-action="AllByApiaryId" asp-route-id="@Model.ApiaryId" asp-route-page="@(this.Model.CurrentPage - 1)">
                            <i class="fas fa-arrow-left"></i>
                        </a>
                    </li>
                }
                @for (int i = 1; i <= this.Model.PagesCount; i++)
                {
                    @if (i == this.Model.CurrentPage)
                    {
                        <li class="page-item active">
                            <span class="page-link">@i</span>
                        </li>
                    }
                    else
                    {
                        @*<li class="page-item">
                                <a class="page-link" asp-route="apiaryRoute" asp-route-apiaryNumber="@Model.Number"
                                   asp-route-page="@i">@i</a>
                            </li>*@
                        <li class="page-item">
                            <a class="page-link" asp-controller="Beehive" asp-action="AllByApiaryId" asp-route-id="@Model.ApiaryId" asp-route-page="@i">@i</a>
                        </li>
                    }
                }
                @if (this.Model.CurrentPage == this.Model.PagesCount)
                {
                    <li class="page-item disabled">
                        <span class="page-link">
                            <i class="fas fa-arrow-right"></i>
                        </span>
                    </li>
                }
                else
                {
                    <li class="page-item">
                        <a class="page-link" asp-controller="Beehive" asp-action="AllByApiaryId"
                           asp-route-id="@Model.ApiaryId" asp-route-page="@(this.Model.CurrentPage + 1)">
                            <i class="fas fa-arrow-right"></i>
                        </a>
                    </li>
                }
            </ul>
        </div>
        <div class="table-legend">
            <p>Легенда</p>
            <ul>
                <li class="beehive-with-device">
                    <span></span> - кошерът е с апарат
                </li>
            </ul>
        </div>
    </div>
</div>

<script>
    function hideInput(){
        var input = document.getElementById("add-beehive-type");
        input.style.display = "none";

        var inputBack = document.getElementById("input-back");
        inputBack.style.display = "none";
    }

    function showInput(){
        var input = document.getElementById("add-beehive-type");
        input.style.display = "flex";

        var inputBack = document.getElementById("input-back");
        inputBack.style.display = "flex";
    }
</script>
