@model BeekeeperAssistant.Web.ViewModels.BeehiveNotes.AllByBeehiveIdBeehiveNoteViewModel
@using BeekeeperAssistant.Web.ViewModels.Shared

@{
    this.ViewData["Title"] = "Информация за кошер - №" + Model.Number;

    var returnUrl = Context.Request.Path;

    var navigation = new Dictionary<string, string>();
    navigation.Add("Табло", "/App");

    var title = "sdf";
    if (!string.IsNullOrEmpty(Model.ApiaryNumber))
    {
        title = Model.ApiaryNumber;
    }
    else
    {
        title = Model.ApiaryName;
    }

    navigation.Add(title, $"/App/Apiary/ById/{Model.ApiaryId}");
    navigation.Add(ViewData["Title"].ToString(), null);

    var breadcrumbNav = new BreadcrumbModel
    {
        Navigation = navigation,
    };
}

<partial model="@breadcrumbNav" name="_BreadcrumbPartial" />

<h1 class="tab-title title-1">@ViewData["Title"]</h1>
<div class="tab beehive">
    <a class="tablinks" asp-controller="Beehive" asp-action="ById" asp-route-id="@Model.BeehiveId">
        <i class="fas fa-archive"></i>
        <span class="text">
            Кошер №@Model.Number
        </span>
    </a>
    <a class="tablinks" asp-controller="Queen" asp-action="ByBeehiveId" asp-route-id="@Model.BeehiveId">
        <i class="fas fa-crown"></i>
        <span class="text">
            Майка
        </span>
    </a>
    <a class="tablinks" asp-controller="Inspection" asp-action="AllByBeehiveId" asp-route-id="@Model.BeehiveId">
        <i class="far fa-calendar-check"></i>
        <span class="text">
            Прегледи
        </span>
    </a>
    <a class="tablinks " asp-controller="Treatment" asp-action="AllByBeehiveId" asp-route-id="@Model.BeehiveId">
        <i class="fas fa-notes-medical"></i>
        <span class="text">
            Третирания
        </span>
    </a>
    <a class="tablinks" asp-controller="Harvest" asp-action="AllByBeehiveId" asp-route-id="@Model.BeehiveId">
        <i class="fas fa-box"></i>
        <span class="text">
            Добиви
        </span>
    </a>
    <a class="tablinks active" asp-controller="BeehiveNote" asp-action="AllByBeehiveId" asp-route-id="@Model.BeehiveId">
        <i class="fas fa-sticky-note"></i>
        <span class="text">
            Бележки
        </span>
    </a>
    <a class="tablinks" asp-controller="BeehiveDiary" asp-action="ByBeehiveId" asp-route-id="@Model.BeehiveId">
        <i class="fas fa-book"></i>
        <span class="text">
            Дневник
        </span>
    </a>
</div>

<div class="tabs-body">
    <partial name="_StatusMessagePartial" />
    <div id="Notes" class="tabcontent">
        @if (Model.AllNotes.Any())
        {
            @if (Model.BeehiveAccess == Access.ReadWrite)
            {
                <div class="page-controls one">
                    <a class="btn beehive-create" asp-controller="BeehiveNote" asp-action="Create"
                asp-route-id="@Model.BeehiveId">
                        <i class="far fa-plus-square"></i> Добави бележка
                    </a>
                </div>
            }
            <div class="custom-notes-list">
                @foreach (var note in Model.AllNotes)
                {
                    <div class="custom-note" style="background-color: @note.Color;">
                        <div class="card-body">
                            <div class="content">
                                @note.Content
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="createdon">
                                @note.ModifiedOn.ToString("MMMM dd, yyyy")
                            </div>
                            <div class="controls">
                                @if (Model.BeehiveAccess == Access.ReadWrite)
                                {
                                    <a class="edit" asp-controller="BeehiveNote" asp-action="Edit" asp-route-id="@note.Id">
                                        <i class="fas fa-pencil-alt"></i>
                                    </a>
                                    <a class="delete" asp-controller="BeehiveNote" asp-action="Delete" asp-route-id="@note.Id">
                                        <i class="far fa-trash-alt"></i>
                                    </a>
                                }
                            </div>
                        </div>

                    </div>
                }
            </div>
        }
        else
        {
            <div class="empty-custom-notes-list">
                <p style="margin-bottom: 25px;">Няма създадени бележки към кошера.</p>
                @if (Model.BeehiveAccess == Access.ReadWrite)
                {
                    <br>
                    <a style="padding: 10px 20px; border: none; border-radius: 5px; font-size: 16px;user-select: none; cursor: pointer; color: var(--white); background-color: var(--beehive-color);"
                asp-controller="BeehiveNote" asp-action="Create" asp-route-id="@Model.BeehiveId">
                        <i class="far fa-plus-square"></i> Добави бележка
                    </a>
                }
            </div>
        }
    </div>
</div>
