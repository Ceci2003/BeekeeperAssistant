@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Изтриване на личната информация";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h4>@ViewData["Title"]</h4>

@* Deleting this data will permanently remove your account, and this cannot be recovered. *@

<div class="alert alert-warning" role="alert">
    <p>
        <strong>Изтривайки тази информациия, завинаги ще изтриете Вашият профил.</strong>
    </p>
</div>

<div>
    <form id="delete-user" method="post" class="form-group">
        <div asp-validation-summary="All" class="text-danger"></div>
        @if (Model.RequirePassword)
        {
            <div class="form-group">
                <label asp-for="Input.Password">Въведете парола</label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        }
        <button class="btn btn-danger" type="submit">Изтриване на информацията и заличаване на профила</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}