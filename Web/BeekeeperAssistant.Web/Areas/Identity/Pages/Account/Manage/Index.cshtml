@page
@model IndexModel
@{
    ViewData["Title"] = "Основна информация";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" model="Model.StatusMessage" />


<form id="profile-form" method="post" enctype="multipart/form-data">
    <img src="@Model.Input.ImageUrl" height="250" id="profileImg" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Username">Потребителско име</label>
        <input asp-for="Username" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label asp-for="Input.PhoneNumber"></label>
        <input asp-for="Input.PhoneNumber" class="form-control" />
        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="file" asp-for="Input.ImageFile" placeholder="Hello" id="imgInp">
    </div>
    <div class="form-group">
        <label asp-for="Input.ImageUrl"></label>
        <input asp-for="Input.ImageUrl" class="file-path validate" type="text" placeholder="Изберете профилна снимка"
            readonly>
    </div>
    <button id="update-profile-button" type="submit" class="btn btn-info">Запази</button>
</form>

@section Scripts {
<partial name="_ValidationScriptsPartial" />

<script>
    imgInp.onchange = evt => {
        const [file] = imgInp.files
        if (file) {
            profileImg.src = URL.createObjectURL(file)
        }
    }
</script>
}