@page
@model RegisterModel
@{
    ViewData["Title"] = "Създайте профил";
}

<div class="form-box-bg">
    <div class="form-box login-register">
        <h2 class="title-2">@ViewData["Title"]</h2>
        <hr />
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div class="error-msg" asp-validation-summary="All"></div>
            <div class="input-box">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span class="error-msg" asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="input-box">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span class="error-msg" asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="input-box">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span class="error-msg" asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="btn-group">
                <input class="btn" type="submit" value="Регистрирай се" />
            </div>
            <div class="link-group">
                <p>
                    <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Вече имате създаден профил</a>
                </p>
            </div>
        </form>
        @* <section>
            <h4>Използвайте друг начин за да се регистрирате</h4>
            <hr />
            <p>Предстои да бъдат добавени.</p>
            </section> *@
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
