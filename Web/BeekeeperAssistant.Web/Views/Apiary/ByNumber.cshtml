@model BeekeeperAssistant.Web.ViewModels.Apiaries.ApiaryDataViewModel;
@{
    this.ViewData["Title"] = "Apiary Details";
}

<div class="col-6">
    <table class="table text-center">
        <tbody>
            <tr>
                <th scope="row">Number:</th>
                <td>@Model.Number</td>
            </tr>
            <tr>
                <th scope="row">Name:</th>
                <td>@Model.Name</td>
            </tr>
            <tr>
                <th scope="row">Type:</th>
                <td>@Model.ApiaryType</td>
            </tr>
            <tr>
                <th scope="row">Adress:</th>
                <td>@Model.Adress</td>
            </tr>
        </tbody>
    </table>
</div>

<a class="btn btn-success" asp-action="Edit" asp-route-id="@Model.Id">Edit Apiary</a>
<form asp-controller="Apiary" asp-action="Delete" asp-route-id="@Model.Id">
    <input class="btn btn-danger" type="submit" value="Delete" />
</form>

<a asp-controller="Beehive" asp-action="Create" asp-route-id="@Model.Id">Create Beehive</a>

<h1 class="text-center">beehives</h1>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">First</th>
            <th scope="col">Last</th>
            <th scope="col">Handle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var beehive in Model.Beehives)
        {
            <tr>
                <th scope="row">
                    <a href="/Beehive/@beehive.ApiaryNumber/@beehive.Id">@beehive.Number</a>
                </th>
                <td>@beehive.BeehivePower</td>
                <td>@beehive.BeehiveSystem</td>
                <td>@beehive.BeehiveType</td>
                <td>
                    <form method="post" asp-controller="Beehive" asp-action="Delete" asp-route-id="@beehive.Id">
                        <button type="submit">Delete</button>
                    </form>
                </td>
                <td>
                    <a asp-controller="Beehive" asp-action="Edit" asp-route-id="@beehive.Id">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>