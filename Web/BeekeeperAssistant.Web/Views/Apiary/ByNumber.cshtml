@model BeekeeperAssistant.Web.ViewModels.Apiaries.ApiaryDataViewModel;
@{
    this.ViewData["Title"] = "Информация за пчелин - №" + Model.Number;
    string hasDevice = "has-device";
    Dictionary<string, string> powerClasses = new Dictionary<string, string>();
    powerClasses.Add("weak", "td-weak");
    powerClasses.Add("medium", "td-medium");
    powerClasses.Add("strong", "td-strong");
    string activeClass = "active";
    string block = "block";
}

<div class="breadcrumb">
    <ul class="breadcrumb-list">
        <li class="breadcrumb-item">
            <a asp-controller="Home" asp-action="Index">Табло</a>
        </li>
        <li class="breadcrumb-item">
            <a asp-controller="Apiary" asp-action="All">Пчелини - всички</a>
        </li>
        <li class="breadcrumb-item active">@ViewData["Title"]</li>
    </ul>
    <div class="breadcrumb-leave">
        <form asp-area="Identity" asp-page="/Account/Logout"
            asp-route-returnUrl="@this.Url.Action("Index", "Home", new { area = string.Empty })">
            <button type="submit" class="exit"><i class="fas fa-sign-out-alt"></i></button>
        </form>
    </div>
</div>

<h1 class="tab-title title-1">@ViewData["Title"]</h1>
<div class="tab">
    <button class="tablinks @if(Model.TabPage == "Apiary") {
    @activeClass
}" onclick="openTab(event, 'Apiary')" id="defaultOpen">Пчелин №@Model.Number</button>
    <button class="tablinks @if(Model.TabPage == "Beehives") {
    @activeClass
}" onclick="openTab(event, 'Beehives')">Кошери</button>
</div>

<div class="tabs-body">
    <div id="Apiary" class="tabcontent" style="display: @if(Model.TabPage == "Apiary") {
    @block
}">

        <partial name="_StatusMessagePartial" />

        <div class="data-view">
            <div class="qr-code">
                <a class="qr-code-print" href="javascript:printQRCode();">
                    <i class="fas fa-print"></i>
                    отпечатай кода
                </a>
                <img id="qr-code-img" src="https://api.qrserver.com/v1/create-qr-code/?data=https://localhost:44302/Apiary/@Model.Number&size=255x255"
                    alt="W3Schools" width="250" height="250">
            </div>
            <div class="apiary-info">
                <table>
                    <tbody>
                        <tr>
                            <th scope="row">Номер:</th>
                            <td id="apiary-num">@Model.Number</td>
                        </tr>
                        <tr>
                            <th scope="row">Име:</th>
                            <td>@Model.Name</td>
                        </tr>
                        <tr>
                            <th scope="row">Вид:</th>
                            <td>@Html.DisplayFor(x => Model.ApiaryType)</td>
                        </tr>
                        <tr>
                            <th scope="row">Местоположение:</th>
                            <td>@Model.Adress</td>
                        </tr>
                        @if (Model.Creator.UserName != this.User.Identity.Name)
                        {
                            <tr>
                                <th scope="row">Собственик:</th>
                                <td>@Model.Creator.UserName</td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="data-edit">
                    @if (Model.ApiaryAccess == Access.ReadWrite)
                    {
                        <a class="btn edit" asp-action="Edit" asp-route-id="@Model.Id">Редактирай</a>
                        <form asp-controller="Apiary" asp-action="Delete" asp-route-id="@Model.Id">
                            <input class="btn delete" type="submit" value="Изтрий" />
                        </form>
                    }

                    @if (Model.Creator.UserName == this.User.Identity.Name)
                    {
                        <a class="btn apiary-create" asp-controller="ApiaryHelper" asp-action="Add"
                        asp-route-id="@Model.Id">Добави помощник</a>

                        @if (Model.HasHelpers)
                        {
                            <a class="btn apiary-create" asp-controller="ApiaryHelper" asp-action="All"
                        asp-route-id="@Model.Id">Всички помощници</a>
                        }
                    }

                </div>
            </div>
            <div class="weather">
                @if (@Model.ForecastResult == null)
                {
                    <div>
                        <p style="font-size: 18px; color: red; text-align: center;">Населеното място <br>не е намерено</p>
                    </div>
                }
                else
                {
                    string imgPath = Model.ForecastResult.WeatherIcon + ".png";
                    <div>
                        <img src="~/img/weather/@imgPath" alt="">
                        <div>
                            <p>Температура: @Model.ForecastResult.Temp°</p>
                            <p>Влажност: @Model.ForecastResult.Humidity%</p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <div id="Beehives" class="tabcontent" style="display: @if(Model.TabPage == "Beehives") {
    @block
}">
        <partial name="_StatusMessagePartial" />

        <div class="page-controls">
            <a class="export-file excel" asp-controller="Beehive" asp-action="ExportToExcel" asp-route-id="@Model.Id">
                <i class="fas fa-file-download"></i> Excel
            </a>
            @if (Model.ApiaryAccess == Access.ReadWrite)
            {
                <a class="btn beehive-create" asp-controller="Beehive" asp-action="Create" asp-route-id="@Model.Id">
                    <i class="fas fa-plus-square pr-2"></i>
                    Добави кошер
                </a>
            }
        </div>
        <table class="data-table">
            <thead>
                <tr>
                    <th>Номер</th>
                    <th>Вид</th>
                    <th>Система</th>
                    <th>Сила</th>
                    <th>Редактиране</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var beehive in Model.Beehives)
                {
                    <tr class="@if (beehive.HasDevice == true) {
                @hasDevice
 }">
                        <td class="number">
                            <a href="/Beehive/@beehive.ApiaryNumber/@beehive.Id">@beehive.Number</a>
                        </td>
                        <td>@Html.DisplayFor(x => beehive.BeehiveType)</td>
                        <td>@Html.DisplayFor(x => beehive.BeehiveSystem)</td>
                        <td class="@powerClasses[beehive.BeehivePower.ToString().ToLower()]">
                            @Html.DisplayFor(x => beehive.BeehivePower)
                        </td>
                        <td class="edit">
                            <div>
                                @if (beehive.BeehiveAccess == Access.ReadWrite)
                                {
                                    <a class="mark" asp-controller="Beehive" asp-action="Bookmark" asp-route-id="@beehive.Id"
                                asp-route-returnController="Apiary" asp-route-returnAction="ByNumber">
                                        <i class="@(beehive.IsBookMarked ? "fas " : "far") fa-bookmark"></i>
                                    </a>
                                    <a class="edit" asp-controller="Beehive" asp-action="Edit" asp-route-id="@beehive.Id">
                                        <i class="far fa-edit"></i>
                                    </a>
                                    <form method="post" id="form-@beehive.Id" asp-controller="Beehive" asp-action="Delete"
                                asp-route-id="@beehive.Id">
                                        <button type="submit" class="delete">
                                            <i class="far fa-trash-alt"></i>
                                        </button>
                                    </form>
                                }

                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        @if (!Model.Beehives.Any())
        {
            <p class="empty-row">пчелинът няма добавени кошери</p>
        }
        <div class="pagination">
            <ul>
                @if (this.Model.CurrentPage == 1)
                {
                    <li class="page-item disabled">
                        <span class="page-link">
                            <i class="fas fa-arrow-left"></i>
                        </span>
                    </li>
                }
                else
                {
                    <li class="page-item">
                        @*<a class="page-link" asp-route-apiaryNumber="@Model.Number" asp-route="apiaryRoute"
                            asp-route-page="@(this.Model.CurrentPage - 1)">
                            <i class="fas fa-arrow-left"></i>
                            </a>*@
                        <a class="page-link" asp-controller="Apiary" asp-action="ByNumber" asp-route-tabPage="Beehives"
                        asp-route-apiaryNumber="@Model.Id" asp-route-page="@(this.Model.CurrentPage - 1)">
                            <i class="fas fa-arrow-left"></i>
                        </a>
                    </li>
                }
                @for (int i = 1; i <= this.Model.PagesCount; i++)
                {
                    @if (i == this.Model.CurrentPage)
                    {
                        <li class="page-item active">
                            <span class="page-link">@i</span>
                        </li>
                    }
                    else
                    {
                        @*<li class="page-item">
                            <a class="page-link" asp-route="apiaryRoute" asp-route-apiaryNumber="@Model.Number"
                            asp-route-page="@i">@i</a>
                            </li>*@
                        <li class="page-item">
                            <a class="page-link" asp-controller="Apiary" asp-action="ByNumber" asp-route-tabPage="Beehives"
                        asp-route-apiaryNumber="@Model.Number" asp-route-page="@i">@i</a>
                        </li>
                    }
                }
                @if (this.Model.CurrentPage == this.Model.PagesCount)
                {
                    <li class="page-item disabled">
                        <span class="page-link">
                            <i class="fas fa-arrow-right"></i>
                        </span>
                    </li>
                }
                else
                {
                    <li class="page-item">
                        <a class="page-link" asp-controller="Apiary" asp-action="ByNumber" asp-route-tabPage="Beehives"
                        asp-route-apiaryNumber="@Model.Number" asp-route-page="@(this.Model.CurrentPage + 1)">
                            <i class="fas fa-arrow-right"></i>
                        </a>
                    </li>
                }
            </ul>
        </div>
        <div class="table-legend">
            @*<p>Легенда</p>*@
            <ul>
                <li class="beehive-with-device">
                    <span></span> - кошерът е с апарат
                </li>
            </ul>
        </div>
    </div>
</div>
