@model BeekeeperAssistant.Web.ViewModels.Apiaries.CreateApiaryInputModel;
@{
    this.ViewData["Title"] = "Добавяне на пчелин";
}

<div class="breadcrumb">
    <ul class="breadcrumb-list">
        <li class="breadcrumb-item">
            <a asp-controller="Home" asp-action="Index">Начало</a>
        </li>
        <li class="breadcrumb-item">
            <a asp-controller="Apiary" asp-action="All">Пчелини-всички</a>
        </li>
        <li class="breadcrumb-item active">@ViewData["Title"]</li>
    </ul>
    <div class="breadcrumb-leave">
        <form asp-area="Identity" asp-page="/Account/Logout"
            asp-route-returnUrl="@this.Url.Action("Index", "Home", new { area = string.Empty })">
            <button type="submit" class="exit"><i class="fas fa-sign-out-alt"></i></button>
        </form>
    </div>
</div>

<div class="content">
    <div class="form-box">
        <form asp-controller="Apiary" asp-action="Create">
            <a class="back-arrow" asp-controller="Apiary" asp-action="All">
                <i class="fas fa-arrow-left"></i>
            </a>
            <h2>@ViewData["Title"]</h2>
            <div asp-validation-summary="All"></div>
            <div class="input-apiary-number row-form-group">
                <div class="input-group city-code">
                    <label asp-for="@Model.CityCode"></label>
                    <input type="text" asp-for="@Model.CityCode" />
                    <span class="error-msg" asp-validation-for="@Model.CityCode"></span>
                </div>
                <span class="dash">-</span>
                <div class="input-group">
                    <label asp-for="@Model.FarmNumber"></label>
                    <input type="text" asp-for="@Model.FarmNumber" />
                    <span class="error-msg" asp-validation-for="@Model.FarmNumber"></span>
                </div>
            </div>
            <div class="row-form-group">
                <div class="input-group">
                    <label asp-for="@Model.Name"></label>
                    <input type="text" asp-for="@Model.Name" />
                    <span class="error-msg" asp-validation-for="@Model.Name"></span>
                </div>
                <div class="input-group">
                    <label asp-for="@Model.Adress"></label>
                    <input type="text" asp-for="@Model.Adress" />
                    <span class="error-msg" asp-validation-for="@Model.Adress"></span>
                </div>
            </div>
            <div class="row-form-group">
                <div class="input-group">
                    <label asp-for="@Model.ApiaryType"></label>
                    <select asp-for="@Model.ApiaryType"
                        asp-items="Html.GetEnumSelectList<BeekeeperAssistant.Data.Models.ApiaryType>()"></select>
                    <span class="error-msg" asp-validation-for="@Model.ApiaryType"></span>
                </div>
            </div>
            <div class="btn-group">
                <input class="btn apiary" type="submit" value="Добави пчелин" />
            </div>
        </form>
    </div>
</div>
