@*@using System;*@
@model BeekeeperAssistant.Web.ViewModels.Beehives.AllUserBeehivesViewModel
@{
    ViewData["Title"] = "All Beehives";
    var classesDict = new Dictionary<string, string>();
    classesDict.Add("strong", "td-strong");
    classesDict.Add("medium", "td-medium");
    classesDict.Add("weak", "td-weak");
}

<div class="breadcrumb">
    <ol class="breadcrumb-list">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Начало</a></li>
        <li class="breadcrumb-item"><a asp-controller="Apiary" asp-action="All">Пчелини - всички</a></li>
        <li class="breadcrumb-item active">Пчелин №<span class="apiaryNumber"></span></li>
    </ol>
</div>

<div class="page-content">
    <vc:apiary-info api-id="@Model.ApiaryId"></vc:apiary-info>

    <div class="table-data beehives">
        <h2>№<span class="apiaryNumber"></span> - Beehives</h2>
        <div class="table-options">
            <a asp-controller="Beehive" asp-action="Create" asp-route-id="@Model.ApiaryId" class="table-create-element">
                <i class="fas fa-plus-square pr-2"></i>
                <strong>Създайте нов кошер</strong>
            </a>
        </div>
        @* <a asp-controller="Beehive" asp-action="Create" asp-route-id="@Model.ApiaryId" class="btn btn-success text-white float-right mb-2"><i class="fas fa-plus-square pr-2"></i><strong>Create Beehive</strong></a> *@
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th scope="col">№ на Кошер</th>
                    <th scope="col">Силла</th>
                    <th scope="col">Система</th>
                    <th scope="col">Тип</th>
                    <th scope="col">Създаден на</th>
                    <th scope="col" width="160">Редактиране</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var beehive in Model.AllUserBeehives)
                {
                    <tr>    @*class="@classesDict[beehive.BeehivePower.ToString().ToLower()]"*@
                        <td scope="row">
                            @beehive.Number
                        </td>
                        <td scope="row" class="@classesDict[beehive.BeehivePower.ToString().ToLower()]">
                            @beehive.BeehivePower
                        </td>
                        <td scope="row">
                            @beehive.BeehiveSystem
                        </td>
                        <td scope="row">
                            @beehive.BeehiveType
                        </td>
                        <td scope="row">
                            @beehive.CreatedOn.ToString("dd - MMMM - yyyy")
                        </td>
                        <td>
                            <a class="btn btn-primary btn-danger text-white float-right">
                                <i class="far fa-trash-alt"></i>
                            </a>
                            <a class="btn btn-primary btn-success text-white float-right mr-5"><i class="far fa-edit"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>  
</div>


<script>
    let apiaryNumberData = document.querySelector("#apiaryNumberData").innerText;
    let apiaryNumbers = document.querySelectorAll(".apiaryNumber");

    apiaryNumbers.forEach(api => {
        api.innerText = apiaryNumberData;
    });

</script>
