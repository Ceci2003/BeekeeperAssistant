@model BeekeeperAssistant.Web.ViewModels.Beehives.AllUserBeehivesViewModel

@{
    ViewData["Title"] = "Кошери всички";
    string infoClass = "information";
    string powerClass = string.Empty;
}

<div class="breadcrumb">
    <ol class="breadcrumb-list">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Начало</a></li>
        <li class="breadcrumb-item active">Кошери - всички</li>        
    </ol>
</div>

<div class="page-content">
    <div class="table-data beehives">
        <h1>@this.ViewData["Title"]</h1>
        @if (Model.AllUserBeehives.Any())
        {
            <div class="table-options">
                <a class="table-create-element" asp-controller="Beehive" asp-action="Create" asp-route-id="@Model.ApiaryId">
                    <i class="fas fa-plus-square pr-2"></i>
                    <strong>Създайте нов кошер</strong>
                </a>
            </div>
            <table>
                <thead>
                    <tr>
                        <th scope="col">№ на Кошер</th>
                        <th scope="col">Пчелин</th>
                        <th scope="col">Сила</th>
                        <th scope="col">Система</th>
                        <th scope="col">Тип</th>
                        <th scope="col">Създаден на</th>
                        <th scope="col" width="160">Редактиране</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var beehive in Model.AllUserBeehives)
                    {
                        <tr class="@if (beehive.HasDevice == true) { @infoClass } ">
                            <td scope="row">
                                <a href="/Beehive/@beehive.ApiaryNumber/@beehive.Id">@beehive.Number</a>
                            </td>
                            <td scope="row">
                                @beehive.ApiaryNumber
                            </td>
                            @switch (beehive.BeehivePower.ToString().ToLower())
                            {
                                case "strong": powerClass = "td-strong"; break;
                                case "medium": powerClass = "td-medium"; break;
                                case "weak": powerClass = "td-weak"; break;
                                default: powerClass = string.Empty; break;
                            }
                            <td scope="row" class="@powerClass">
                                @beehive.BeehivePower.GetDescription()
                            </td>
                            <td scope="row">
                                @beehive.BeehiveSystem
                            </td>
                            <td scope="row">
                                @beehive.BeehiveType
                            </td>
                            <td scope="row">
                                @beehive.CreatedOn.ToString("dd - MMMM - yyyy")
                            </td>
                            <td>
                                <a class="table-read" href=""><i class="far fa-bookmark"></i></a>
                                <a class="table-edit" asp-controller="" asp-action="" asp-route-id=""><i class="far fa-edit"></i></a>
                                <form id="form-" asp-action="Delete" asp-controller="" asp-route-id="">
                                    <a class="table-delete" onclick="sendForm('form-')">
                                        <i class="far fa-trash-alt"></i>
                                    </a>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="table-legend">
                <p>Легенда</p>
                <ul>
                    <li class="beehive-with-device">
                        <span></span> - кошерът е с апарат
                    </li>
                </ul>
            </div>
        }
        else
        {
            <div class="empty-table">
                <img src="~/images/apiary_img.jpg" alt="Нямате създадени Кошери">
                <p>Нямате създадени Кошери</p>
                <a asp-controller="Beehive" asp-action="Create" asp-route-id="@Model.ApiaryId" class="table-create-element">
                    <i class="fas fa-plus-square pr-2"></i>
                    <strong>Създайте нов кошер</strong>
                </a>
            </div>
        }
    </div>
</div>

@section Scripts
{
    <script>
        function sendForm(formId) {
            document.getElementById(formId).submit()
        }
    </script>
}
