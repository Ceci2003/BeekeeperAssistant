@model BeekeeperAssistant.Web.ViewModels.Beehives.EditBeehiveInputModel
@using BeekeeperAssistant.Data.Models;
@{
    var keyValuePairApiaries = Model.AllApiaries.Select(x => new SelectListItem(x.Key.ToString(),
            x.Value.ToString())).ToList();
}

<div class="breadcrumb">
    <ul class="breadcrumb-list">
        <li class="breadcrumb-item">
            <a asp-controller="Home" asp-action="Index">Начало</a>
        </li>
        <li class="breadcrumb-item">
            <a asp-controller="Beehive" asp-action="All">Пчелини-всички</a>
        </li>
        <li class="breadcrumb-item active">@ViewData["Title"]</li>
    </ul>
    <div class="breadcrumb-leave">
        <form asp-area="Identity" asp-page="/Account/Logout"
            asp-route-returnUrl="@this.Url.Action("Index", "Home", new { area = string.Empty })">
            <button type="submit" class="exit"><i class="fas fa-sign-out-alt"></i></button>
        </form>
    </div>
</div>

<div class="content">
    <div class="form-box">
        <form asp-controller="Beehive" asp-action="Edit" method="post">
            <div class="input-box">
                <label asp-for="@Model.Number"></label>
                <input asp-for="@Model.Number" />
                <span asp-validation-for="@Model.Number"></span>
            </div>
            <div class="input-box">
                <label asp-for="@Model.Date"></label>
                <input asp-for="@Model.Date" />
                <span asp-validation-for="@Model.Date"></span>
            </div>
            <div class="input-box">
                <label asp-for="@Model.ApiaryId"></label>
                <select asp-for="@Model.ApiaryId" asp-items="keyValuePairApiaries"></select>
            </div>
            <div class="input-box">
                <label asp-for="@Model.BeehiveSystem"></label>
                <select asp-for="@Model.BeehiveSystem" asp-items="@Html.GetEnumSelectList<BeehiveSystem>()"></select>
            </div>
            <div class="input-box">
                <label asp-for="@Model.BeehiveType"></label>
                <select asp-for="@Model.BeehiveType" asp-items="@Html.GetEnumSelectList<BeehiveType>()"></select>
            </div>
            <div class="input-box">
                <label asp-for="@Model.BeehivePower"></label>
                <select asp-for="@Model.BeehivePower" asp-items="@Html.GetEnumSelectList<BeehivePower>()"></select>
            </div>
            <div class="input-box check">
                <label asp-for="@Model.HasDevice"></label>
                <input asp-for="@Model.HasDevice" />
            </div>
            <div class="input-box check">
                <label asp-for="@Model.HasPolenCatcher"></label>
                <input asp-for="@Model.HasPolenCatcher" />
            </div>
            <div class="input-box check">
                <label asp-for="@Model.HasPropolisCatcher"></label>
                <input asp-for="@Model.HasPropolisCatcher" />
            </div>

            <input type="hidden" asp-for="@Model.ApiaryId" />

            <button type="submit">Submit</button>
        </form>
    </div>
</div>
