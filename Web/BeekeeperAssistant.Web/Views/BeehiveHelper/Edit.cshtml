@model BeekeeperAssistant.Web.ViewModels.BeehiveHelpers.EditBeehiveHelperInputModel
@{
    this.ViewData["Title"] = "Редактиране на помощник";
}

<div class="breadcrumb">
    <ul class="breadcrumb-list">
        <li class="breadcrumb-item">
            <a asp-controller="Home" asp-action="Index">...</a>
        </li>
        <li class="breadcrumb-item">
            <a asp-controller="Beehive" asp-action="ById" asp-route-beehiveId="@Model.BeehiveId"
                asp-route-tabPage="Beehive">@Model.BeehiveNumber</a>
        </li>
        <li class="breadcrumb-item">
            <a asp-controller="BeehiveHelper" asp-action="All" asp-route-id="@Model.BeehiveId">Помощници</a>
        </li>
        <li class="breadcrumb-item active">@ViewData["Title"]</li>
    </ul>
    <div class="breadcrumb-leave">
        <form asp-area="Identity" asp-page="/Account/Logout"
            asp-route-returnUrl="@this.Url.Action("Index", "Home", new { area = string.Empty })">
            <button type="submit" class="exit"><i class="fas fa-sign-out-alt"></i></button>
        </form>
    </div>
</div>

<div class="content">
    <div class="center-screen-parent border">
        <div class="form-submit">
            <a class="back-arrow" asp-controller="BeehiveHelper" asp-action="All" asp-route-id="@Model.BeehiveId">
                <i class="fas fa-arrow-left"></i>
            </a>
            <h3>@ViewData["Title"]</h3>
            <form asp-controller="BeehiveHelper" asp-action="Edit" asp-route-userId="@Model.UserId"
                asp-route-beehiveId="@Model.BeehiveId">
                <div class="form-group">
                    <div class="input-group">
                        <label asp-for="UserUserName"></label>
                        <input asp-for="UserUserName" readonly />
                    </div>
                    <div class="input-group">
                        <label asp-for="Access"></label>
                        <select asp-for="Access" asp-items="Html.GetEnumSelectList<Access>()"></select>
                    </div>
                </div>
                <button type="submit" class="btn btn-edit">Редактирай</button>
            </form>
        </div>
    </div>
</div>
