@model BeekeeperAssistant.Web.ViewModels.BeehiveNotes.AllByBeehiveIdBeehiveNoteViewModel
@{
    this.ViewData["Title"] = "Информация за кошер - №" + Model.Number;

    var returnUrl = Context.Request.Path;
}

<div class="breadcrumb">
    <div class="aside-icon" onclick="asideBurgerMenuClick();">
        <i class="fas fa-bars"></i>
    </div>
    <ul class="breadcrumb-list">
        <li class="breadcrumb-item">
            <a asp-controller="Home" asp-action="Index">Табло</a>
        </li>
        <li class="breadcrumb-item">
            <a class="tablinks active" asp-controller="Apiary" asp-action="ById" asp-route-id="@Model.ApiaryId">
                @if (!string.IsNullOrEmpty(Model.ApiaryNumber))
                {
                    @($"Пчелин № {Model.ApiaryNumber}")
                }
                else
                {
                    @Model.ApiaryName
                }
            </a>
        </li>
        <li class="breadcrumb-item active">@ViewData["Title"]</li>
    </ul>
    <ul class="breadcrumb-list responsive">
        <li class="breadcrumb-item">
            <a asp-controller="Home" asp-action="Index">...</a>
        </li>
        <li class="breadcrumb-item">
            <a class="tablinks active" asp-controller="Apiary" asp-action="ById" asp-route-id="@Model.ApiaryId">
                @if (!string.IsNullOrEmpty(Model.ApiaryNumber))
                {
                    @($"Пчелин № {Model.ApiaryNumber}")
                }
                else
                {
                    @Model.ApiaryName
                }
            </a>
        </li>
        <li class="breadcrumb-item active">@Model.Number</li>
    </ul>
    <div class="breadcrumb-leave">
        <form asp-area="Identity" asp-page="/Account/Logout"
              asp-route-returnUrl="@this.Url.Action("Index", "Home", new { area = string.Empty })">
            <button type="submit" class="exit"><i class="fas fa-sign-out-alt"></i></button>
        </form>
    </div>
</div>

<h1 class="tab-title title-1">@ViewData["Title"]</h1>
<div class="tab beehive">
    <a class="tablinks" asp-controller="Beehive" asp-action="ById" asp-route-id="@Model.BeehiveId">
        <i class="fas fa-archive"></i>
        <span class="text">
            Кошер №@Model.Number
        </span>
    </a>
    <a class="tablinks" asp-controller="Queen" asp-action="ByBeehiveId" asp-route-id="@Model.BeehiveId">
        <i class="fas fa-crown"></i>
        <span class="text">
            Майка
        </span>
    </a>
    <a class="tablinks" asp-controller="Inspection" asp-action="AllByBeehiveId" asp-route-id="@Model.BeehiveId">
        <i class="far fa-calendar-check"></i>
        <span class="text">
            Прегледи
        </span>
    </a>
    <a class="tablinks " asp-controller="Treatment" asp-action="AllByBeehiveId" asp-route-id="@Model.BeehiveId">
        <i class="fas fa-notes-medical"></i>
        <span class="text">
            Третирания
        </span>
    </a>
    <a class="tablinks" asp-controller="Harvest" asp-action="AllByBeehiveId" asp-route-id="@Model.BeehiveId">
        <i class="fas fa-box"></i>
        <span class="text">
            Добиви
        </span>
    </a>
    <a class="tablinks active" asp-controller="BeehiveNote" asp-action="AllByBeehiveId" asp-route-beehiveId="@Model.BeehiveId">
        <i class="fas fa-sticky-note"></i>
        <span class="text">
            Бележки
        </span>
    </a>
    <a class="tablinks" asp-controller="BeehiveDiary" asp-action="ByBeehiveId" asp-route-id="@Model.BeehiveId">
        <i class="fas fa-book"></i>
        <span class="text">
            Дневник
        </span>
    </a>
</div>

<div class="tabs-body">
    <partial name="_StatusMessagePartial" />
    <div id="Notes" class="tabcontent">
        @if (Model.BeehiveAccess == Access.ReadWrite)
        {
            <div class="page-controls one">
                <a class="btn beehive-create" asp-controller="BeehiveNote" asp-action="Create"
                   asp-route-beehiveId="@Model.BeehiveId">
                    <i class="far fa-plus-square"></i> Добави бележка
                </a>
            </div>
        }
        @if (Model.AllNotes.Any())
        {
            <div class="custom-notes-list">
                @foreach (var note in Model.AllNotes)
                {
                    <div class="custom-note" style="background-color: @note.Color;">
                        <div class="card-body">
                            <div class="content">
                                @note.Content
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="createdon">
                                @note.ModifiedOn.ToString("MMMM dd, yyyy")
                            </div>
                            <div class="controls">
                                @if (Model.BeehiveAccess == Access.ReadWrite)
                                {
                                    <a class="edit" asp-controller="BeehiveNote" asp-action="Edit" asp-route-noteId="@note.Id">
                                        <i class="fas fa-pencil-alt"></i>
                                    </a>
                                    <a class="delete" asp-controller="BeehiveNote" asp-action="Delete" asp-route-noteId="@note.Id">
                                        <i class="far fa-trash-alt"></i>
                                    </a>
                                }
                            </div>
                        </div>

                    </div>
                }
            </div>
        }
        else
        {
            <div class="empty-custom-notes-list">
                Няма създадени бележки към пчелина.
                @if (Model.BeehiveAccess == Access.ReadWrite)
                {
                    @("Добавете нова от тук:")
                    <br>
                    <a asp-controller="BeehiveNote" asp-action="Create" asp-route-beehiveId="@Model.BeehiveId">
                        <i class="far fa-plus-square"></i> Добави бележка
                    </a>
                }
            </div>
        }
    </div>
</div>
