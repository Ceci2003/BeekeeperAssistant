@model BeekeeperAssistant.Web.ViewModels.Harvest.AllByBeehiveIdHarvestViewModel
@{
    this.ViewData["Title"] = "Информация за кошер - №" + Model.BeehiveNumber;
    var onlyReadMsg = "нямате достъп";
}

<div class="breadcrumb">
    <div class="aside-icon" onclick="asideBurgerMenuClick();">
        <i class="fas fa-bars"></i>
    </div>
    <ul class="breadcrumb-list">
        <li class="breadcrumb-item">
            <a asp-controller="Home" asp-action="Index">Табло</a>
        </li>
        <li class="breadcrumb-item">
            <a class="tablinks active" asp-controller="Apiary" asp-action="ById" asp-route-apiaryId="@Model.ApiaryId">
                @if (!string.IsNullOrEmpty(Model.ApiaryNumber))
                {
                    @($"Пчелин № {Model.ApiaryNumber}")
                }
                else
                {
                    @Model.ApiaryName
                }
            </a>
        </li>
        <li class="breadcrumb-item active">@ViewData["Title"]</li>
    </ul>
    <ul class="breadcrumb-list responsive">
        <li class="breadcrumb-item">
            <a asp-controller="Home" asp-action="Index">...</a>
        </li>
        <li class="breadcrumb-item">
            <a class="tablinks active" asp-controller="Apiary" asp-action="ById" asp-route-apiaryId="@Model.ApiaryId">
                @if (!string.IsNullOrEmpty(Model.ApiaryNumber))
                {
                    @($"Пчелин № {Model.ApiaryNumber}")
                }
                else
                {
                    @Model.ApiaryName
                }
            </a>
        </li>
        <li class="breadcrumb-item active">@Model.BeehiveNumber</li>
    </ul>
    <div class="breadcrumb-leave">
        <form asp-area="Identity" asp-page="/Account/Logout"
              asp-route-returnUrl="@this.Url.Action("Index", "Home", new { area = string.Empty })">
            <button type="submit" class="exit"><i class="fas fa-sign-out-alt"></i></button>
        </form>
    </div>
</div>

<h1 class="tab-title title-1">Информация за кошер - №@Model.BeehiveNumber</h1>

<div class="tab">
    <a class="tablinks" asp-controller="Beehive" asp-action="ById" asp-route-id="@Model.BeehiveId">
        <i class="fas fa-archive"></i>
        Кошер №@Model.BeehiveNumber
    </a>
    <a class="tablinks" asp-controller="Queen" asp-action="ByBeehiveId" asp-route-id="@Model.BeehiveId">
        <i class="fas fa-crown"></i>
        Майка
    </a>

    <a class="tablinks" asp-controller="Inspection" asp-action="AllByBeehiveId" asp-route-id="@Model.BeehiveId">
        <i class="far fa-calendar-check"></i>
        Прегледи
    </a>
    <a class="tablinks" asp-controller="Treatment" asp-action="AllByBeehiveId" asp-route-id="@Model.BeehiveId">
        <i class="fas fa-notes-medical"></i>
        Третирания
    </a>
    <a class="tablinks active" asp-controller="Harvest" asp-action="AllByBeehiveId" asp-route-id="@Model.BeehiveId">
        <i class="fas fa-box"></i>
        Добиви
    </a>
</div>

<div class="tabs-body">
    <partial name="_StatusMessagePartial" />
    <div id="Harvests" class="tabcontent">
        <div class="harvests-data">
            @if (Model.BeehiveAccess == Access.ReadWrite)
            {
                <div class="page-controls">
                    <a class="export-file excel" asp-controller="Harvest" asp-action="ExportToExcel"
                       asp-route-id="@Model.BeehiveId"><i class="fas fa-file-download"></i> Excel</a>
                    <a class="btn create-data" asp-controller="Harvest" asp-action="Create" asp-route-id="@Model.BeehiveId">
                        <i class="fas fa-box"></i>
                        Добави добив
                    </a>
                </div>
            }
            <table class="all-table">
                <thead>
                <th>Име</th>
                <th class="table-sdate">Дата</th>
                <th>Продукт</th>
                <th class="table-amount">Количество</th>
                <th>Редактиране</th>
                </thead>
                <tbody>
                    @foreach (var harvest in Model.AllHarvests)
                    {
                        string rowMasterId = "trMasterHarvest" + harvest.Id;
                        string rowExpandId = "trExpandHarvest" + harvest.Id;
                        <tr id="@rowMasterId" class="table-sdate" onclick="expandTable(@rowMasterId)">
                            <td>
                                @harvest.HarvestName
                            </td>
                            <td class="table-sdate">
                                <time datetime="@harvest.DateOfHarves.ToString("O")"></time>
                            </td>
                            <td>
                                @Html.DisplayFor(x => harvest.HarvestProductType)
                                @if (harvest.HarvestProductType == HarvestProductType.Honey)
                                {
                                    <span> - @Html.DisplayFor(x => harvest.HoneyType)</span>
                                }
                            </td>
                            <td class="table-amount">
                                @harvest.Quantity
                                <span>@Html.DisplayFor(x => harvest.Unit)</span>
                            </td>
                            <td class="edit">
                                <div class="edit-container">
                                    @if (Model.BeehiveAccess == Access.ReadWrite)
                                    {
                                        <a class="edit" asp-controller="Harvest" asp-action="Edit" asp-route-id="@harvest.Id">
                                            <i class="far fa-edit"></i>
                                        </a>
                                        <a class="delete" onclick="ShowDeleteForm('@harvest.Id-harvest')">
                                            <i class="far fa-trash-alt"></i>
                                        </a>

                                        <div id="@harvest.Id-harvest" class="delete-form-display">
                                            <form id="form-@harvest.Id" asp-controller="Harvest" asp-action="Delete"
                                                  asp-route-id="@harvest.Id">
                                                <a class="delete close"
                                                   onclick="HideDeleteForm('@harvest.Id-harvest')">
                                                    <i class="fas fa-times"></i>
                                                </a>
                                                <p>
                                                    Сигурни ли сте че искате да изтриете добив от
                                                    <strong>@harvest.DateOfHarves.ToString("ddd dd-MMM-yyyy")</strong>?
                                                </p>
                                                <button type="submit" class="delete">
                                                    Изтрий <i class="far fa-trash-alt"></i>
                                                </button>
                                            </form>
                                            <div id="@harvest.Id-back" class="content-cover"
                                                 onclick="HideDeleteForm('@harvest.Id-harvest')"></div>
                                        </div>
                                    }
                                    else
                                    {
                                        @onlyReadMsg
                                    }
                                </div>
                            </td>
                        </tr>
                        <tr id="@rowExpandId" class="data-table-expand" style="display: none;">
                            <td colspan="8">
                                <div class="note">
                                    <strong><i class="far fa-sticky-note"></i> Бележка:</strong> @harvest.Note
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="all-table-responsive">
                <table>
                    <thead>
                    <th>Параметър</th>
                    <th>Стойност</th>
                    </thead>
                    <tbody>
                        @foreach (var harvest in Model.AllHarvests)
                        {
                            <tr>
                                <td>Име</td>
                                <td>
                                    @harvest.HarvestName
                                </td>
                            </tr>
                            <tr>
                                <td>Дата</td>
                                <td>
                                    @harvest.DateOfHarves.ToString("ddd dd-MMM-yyyy")
                                </td>
                            </tr>
                            <tr>
                                <td>Продукт</td>
                                <td>
                                    @Html.DisplayFor(x => harvest.HarvestProductType)
                                    @if (harvest.HarvestProductType == HarvestProductType.Honey)
                                    {
                                        <span> - @Html.DisplayFor(x => harvest.HoneyType)</span>
                                    }
                                </td>
                            </tr>
                            <tr>
                                <td>Количество</td>
                                <td>
                                    @harvest.Quantity <span>@Html.DisplayFor(x => harvest.Unit)</span>
                                </td>
                            </tr>
                            <tr class="edit-row">
                                <td>
                                    Редактиране
                                </td>
                                <td class="edit">
                                    <div class="edit-container">
                                        @if (Model.BeehiveAccess == Access.ReadWrite)
                                        {
                                            <a class="edit" asp-controller="Harvest" asp-action="Edit" asp-route-id="@harvest.Id">
                                                <i class="far fa-edit"></i>
                                            </a>
                                            <a class="delete" onclick="ShowDeleteForm('@harvest.Id-harvest-responsive')">
                                                <i class="far fa-trash-alt"></i>
                                            </a>

                                            <div id="@harvest.Id-harvest-responsive" class="delete-form-display">
                                                <form id="form-@harvest.Id" asp-controller="Harvest" asp-action="Delete"
                                                      asp-route-id="@harvest.Id">
                                                    <a class="delete close"
                                                       onclick="HideDeleteForm('@harvest.Id-harvest-responsive')">
                                                        <i class="fas fa-times"></i>
                                                    </a>
                                                    <p>
                                                        Сигурни ли сте че искате да изтриете добив от
                                                        <strong>@harvest.DateOfHarves.ToString("ddd dd-MMM-yyyy")</strong>?
                                                    </p>
                                                    <button type="submit" class="delete">
                                                        Изтрий <i class="far fa-trash-alt"></i>
                                                    </button>
                                                </form>
                                                <div id="@harvest.Id-back" class="content-cover"
                                                     onclick="HideDeleteForm('@harvest.Id-harvest-responsive')"></div>
                                            </div>
                                        }
                                        else
                                        {
                                            @onlyReadMsg
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            @if (!Model.AllHarvests.Any())
            {
                <p class="empty-content">няма добавени добиви</p>
            }
        </div>

        <div class="pagination">
            <ul>
                @if (this.Model.CurrentPage == 1)
                {
                    <li class="page-item disabled">
                        <span class="page-link">
                            <i class="fas fa-arrow-left"></i>
                        </span>
                    </li>
                }
                else
                {
                    <li class="page-item">
                        <a class="page-link" asp-controller="Harvest" asp-action="AllByBeehiveId" asp-route-id="@Model.BeehiveId" asp-route-page="@(Model.CurrentPage - 1)">
                            <i class="fas fa-arrow-left"></i>
                        </a>
                    </li>
                }
                @for (int i = 1; i <= this.Model.PagesCount; i++)
                {
                    @if (i == this.Model.CurrentPage)
                    {
                        <li class="page-item active">
                            <span class="page-link">@i</span>
                        </li>
                    }
                    else
                    {
                        <li class="page-item">
                            <a class="page-link" asp-controller="Harvest" asp-action="AllByBeehiveId"
                               asp-route-id="@Model.BeehiveId"
                               asp-route-page="@i">@i</a>
                        </li>
                    }
                }
                @if (this.Model.CurrentPage == this.Model.PagesCount)
                {
                    <li class="page-item disabled">
                        <span class="page-link">
                            <i class="fas fa-arrow-right"></i>
                        </span>
                    </li>
                }
                else
                {
                    <li class="page-item">
                        <a class="page-link" asp-controller="Harvest" asp-action="AllByBeehiveId"
                           asp-route-id="@Model.BeehiveId"
                           asp-route-page="@(Model.CurrentPage + 1)">
                            <i class="fas fa-arrow-right"></i>
                        </a>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>