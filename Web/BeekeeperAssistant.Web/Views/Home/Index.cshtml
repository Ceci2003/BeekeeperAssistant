@using BeekeeperAssistant.Common
@{
    this.ViewData["Title"] = "Home Page";
}

<div class="content">
    @if (!User.Identity.IsAuthenticated)
    {
        <div class="text-center">
            <h1 class="text-danger">Oops...</h1>
            <h3 class="text-danger">You're not logged in!</h3>
        </div>
    }
    else
    {
        <div class="text-center">
            <a class="btn btn-primary" asp-controller="Apiary" asp-action="Create">Create Apiary</a>
            <a class="btn btn-primary" asp-controller="Apiary" asp-action="All">All Apiary</a>
        </div>
    }
</div>