@model BeekeeperAssistant.Web.ViewModels.Inspection.AllInspectionsViewModel
@{
    this.ViewData["Title"] = "Информация за кошер - №" + Model.BeehiveNumber;
    Dictionary<string, string> powerClasses = new Dictionary<string, string>();
    powerClasses.Add("weak", "td-weak");
    powerClasses.Add("medium", "td-medium");
    powerClasses.Add("strong", "td-strong");
    string[] yesNo = new string[] { "Не", "Да" };
    var onlyReadMsg = "нямате достъп";

    string website = $"{this.Context.Request.Scheme}://{this.Context.Request.Host}{this.Context.Request.Path}";
}

<div class="breadcrumb">
    <div class="aside-icon" onclick="asideBurgerMenuClick();">
        <i class="fas fa-bars"></i>
    </div>
    <ul class="breadcrumb-list">
        <li class="breadcrumb-item">
            <a asp-controller="Home" asp-action="Index">Табло</a>
        </li>
        <li class="breadcrumb-item">
            <a href="/Apiary/@Model.ApiaryNumber">Пчелин: @Model.ApiaryNumber</a>
        </li>
        <li class="breadcrumb-item active">@ViewData["Title"]</li>
    </ul>
    <ul class="breadcrumb-list responsive">
        <li class="breadcrumb-item">
            <a asp-controller="Home" asp-action="Index">...</a>
        </li>
        <li class="breadcrumb-item">
            <a href="/Apiary/@Model.ApiaryNumber">@Model.ApiaryNumber</a>
        </li>
        <li class="breadcrumb-item active">@Model.BeehiveNumber</li>
    </ul>
    <div class="breadcrumb-leave">
        <form asp-area="Identity" asp-page="/Account/Logout"
              asp-route-returnUrl="@this.Url.Action("Index", "Home", new { area = string.Empty })">
            <button type="submit" class="exit"><i class="fas fa-sign-out-alt"></i></button>
        </form>
    </div>
</div>

<h1 class="tab-title title-1">Информация за кошер - №@Model.BeehiveNumber</h1>

<div class="tab">
    <a class="tablinks" asp-controller="Beehive" asp-action="ById" asp-route-id="@Model.BeehiveId">
        <i class="fas fa-archive"></i>
        Кошер №@Model.BeehiveNumber
    </a>
    <a class="tablinks" asp-controller="Queen" asp-action="ByBeehiveId" asp-route-id="@Model.BeehiveId">
        <i class="fas fa-crown"></i>
        Майка
    </a>

    <a class="tablinks active" asp-controller="Inspection" asp-action="AllByBeehiveId" asp-route-id="@Model.BeehiveId">
        <i class="far fa-calendar-check"></i>
        Прегледи
    </a>
    <a class="tablinks" asp-controller="Treatment" asp-action="AllByBeehiveId" asp-route-id="@Model.BeehiveId">
        <i class="fas fa-notes-medical"></i>
        Третирания
    </a>
    <a class="tablinks" asp-controller="Harvest" asp-action="AllByBeehiveId" asp-route-id="@Model.BeehiveId">
        <i class="fas fa-box"></i>
        Добиви
    </a>
</div>

<div class="tabs-body">
    <div id="Inspections" class="tabcontent">
        <div class="harvests-data">
            @if (Model.BeehiveAccess == Access.ReadWrite)
            {
                <div class="page-controls">
                    @if (Model.AllInspections.Any())
                    {
                        <a class="export-file excel" asp-controller="Inspection" asp-action="ExportToExcel"
                           asp-route-id="@Model.BeehiveId"><i class="fas fa-file-download"></i>Excel</a>
                    }
                    <a class="btn create-data" asp-controller="Inspection" asp-action="Create" asp-route-id="@Model.BeehiveId">
                        <i class="fas fa-notes-medical"></i>
                        Добави преглед
                    </a>
                </div>
            }
            <table class="all-table">
                <thead>
                <th>Дата на прегледа</th>
                <th>Вид на прегледа</th>
                <th>Роил ли се е</th>
                <th>Сила на кошера</th>
                <th>Редактиране</th>
                </thead>
                <tbody>
                    @foreach (var inspection in Model.AllInspections)
                    {
                        string rowMasterId = "trMasterInspection" + inspection.Id;
                        string rowExpandId = "trExpandInspection" + inspection.Id;
                        <tr id="@rowMasterId" onclick="expandTable(@rowMasterId)">
                            <td class="table-sdate">
                                <time datetime="@inspection.DateOfInspection.ToString("O")"></time>
                            </td>
                            <td>
                                @Html.DisplayFor(i => inspection.InspectionType)
                            </td>
                            <td>
                                @if (inspection.Swarmed)
                                {
                                    <strong>@yesNo[1]</strong>
                                }
                                else
                                {
                                    @yesNo[0]
                                }
                            </td>
                            <td class="@powerClasses[inspection.BeehivePower.ToString().ToLower()]">
                                @Html.DisplayFor(i => inspection.BeehivePower)
                            </td>
                            <td class="edit">
                                <div class="edit-container">
                                    @if (Model.BeehiveAccess == Access.ReadWrite)
                                    {
                                        <a class="edit" asp-controller="Inspection" asp-action="Edit"
                                           asp-route-id="@inspection.Id" asp-route-beehiveId="@Model.BeehiveId">
                                            <i class="far fa-edit"></i>
                                        </a>
                                        <a class="delete" onclick="ShowDeleteForm('@inspection.Id-inspection')">
                                            <i class="far fa-trash-alt"></i>
                                        </a>

                                        <div id="@inspection.Id-inspection" class="delete-form-display">
                                            <form id="form-@inspection.Id" asp-controller="Inspection" asp-action="Delete"
                                                  asp-route-id="@inspection.Id" asp-route-beehiveId="@Model.BeehiveId">
                                                <a class="delete close"
                                                   onclick="HideDeleteForm('@inspection.Id-inspection')">
                                                    <i class="fas fa-times"></i>
                                                </a>
                                                <p>
                                                    Сигурни ли сте че искате да изтриете преглед от
                                                    <strong>@inspection.DateOfInspection.ToString("ddd dd-MMM-yyyy")</strong>?
                                                </p>
                                                <button type="submit" class="delete">
                                                    Изтрий <i class="far fa-trash-alt"></i>
                                                </button>
                                            </form>
                                            <div id="@inspection.Id-back" class="content-cover"
                                                 onclick="HideDeleteForm('@inspection.Id-inspection')"></div>
                                        </div>
                                    }
                                    else
                                    {
                                        @onlyReadMsg
                                    }
                                </div>
                            </td>
                        </tr>
                        <tr id="@rowExpandId" class="data-table-expand" style="display: none;">
                            <td colspan="5">
                                <div class="expand-data-tables">
                                    <div class="section">
                                        <h3>Основна информация</h3>
                                        <table>
                                            <tr>
                                                <td>Предприети действия:</td>
                                                <td>@Html.DisplayFor(x => inspection.BeehiveAction)</td>
                                            </tr>
                                            <tr>
                                                <td>Маса на кошера(кг.):</td>
                                                <td>@inspection.Weight</td>
                                            </tr>
                                            <tr>
                                                <td>Температура на кошера(t°):</td>
                                                <td>@inspection.HiveTemperature</td>
                                            </tr>
                                            <tr>
                                                <td>Влажност на кошера(%):</td>
                                                <td>@inspection.HiveHumidity</td>
                                            </tr>
                                        </table>
                                    </div>
                                    @if (inspection.IncludeQueenSection)
                                    {
                                        <div class="section">
                                            <h3>Секция майка</h3>
                                            <table>
                                                <tr>
                                                    <td>Забелязана майка:</td>
                                                    <td>
                                                        @if (inspection.QueenSeen)
                                                        {
                                                            @yesNo[1]
                                                        }
                                                        else
                                                        {
                                                            <strong>@yesNo[0]</strong>
                                                        }
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>Маточници:</td>
                                                    <td>@Html.DisplayFor(x => inspection.QueenCells)</td>
                                                </tr>
                                                <tr>
                                                    <td>Работен статус на майката:</td>
                                                    <td>@Html.DisplayFor(x => inspection.QueenWorkingStatus)</td>
                                                </tr>
                                                <tr>
                                                    <td>Сила на майката:</td>
                                                    <td>@Html.DisplayFor(x => inspection.QueenPowerStatus)</td>
                                                </tr>
                                            </table>
                                        </div>
                                    }
                                    @if (inspection.IncludeBrood)
                                    {
                                        <div class="section">
                                            <h3>Секция пило</h3>
                                            <table>
                                                <tr>
                                                    <td>Яйца:</td>
                                                    <td>
                                                        @if (inspection.Eggs)
                                                        {
                                                            <strong>@yesNo[1]</strong>
                                                        }
                                                        else
                                                        {
                                                            @yesNo[0]
                                                        }
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>Запечатано пило:</td>
                                                    <td>
                                                        @if (inspection.ClappedBrood)
                                                        {
                                                            <strong>@yesNo[1]</strong>
                                                        }
                                                        else
                                                        {
                                                            @yesNo[0]
                                                        }
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>Излюпващо се пило:</td>
                                                    <td>
                                                        @if (inspection.UnclappedBrood)
                                                        {
                                                            <strong>@yesNo[1]</strong>
                                                        }
                                                        else
                                                        {
                                                            @yesNo[0]
                                                        }
                                                    </td>
                                                </tr>
                                            </table>
                                        </div>
                                    }
                                    @if (inspection.IncludeFramesWith)
                                    {
                                        <div class="section">
                                            <h3>Секция пити</h3>
                                            <table>
                                                <tr>
                                                    <td>Пити с пчели:</td>
                                                    <td>@inspection.FramesWithBees</td>
                                                </tr>
                                                <tr>
                                                    <td>Пити с пило:</td>
                                                    <td>@inspection.FramesWithBrood</td>
                                                </tr>
                                                <tr>
                                                    <td>Пити с мед:</td>
                                                    <td>@inspection.FramesWithHoney</td>
                                                </tr>
                                                <tr>
                                                    <td>Пити с прашец:</td>
                                                    <td>@inspection.FramesWithPollen</td>
                                                </tr>
                                            </table>
                                        </div>
                                    }
                                    @if (inspection.IncludeActivity)
                                    {
                                        <div class="section">
                                            <h3>Секция активност</h3>
                                            <table>
                                                <tr>
                                                    <td>Активност на пчелите:</td>
                                                    <td>@Html.DisplayFor(x => inspection.BeeActivity)</td>
                                                </tr>
                                                <tr>
                                                    <td>Oриентационни полети:</td>
                                                    <td>@Html.DisplayFor(x => inspection.OrientationActivity)</td>
                                                </tr>
                                                <tr>
                                                    <td>Принос на прашец:</td>
                                                    <td>@Html.DisplayFor(x => inspection.PollenActivity)</td>
                                                </tr>
                                                <tr>
                                                    <td>Принос на мед:</td>
                                                    <td>@Html.DisplayFor(x => inspection.ForragingActivity)</td>
                                                </tr>
                                                <tr>
                                                    <td>Пчели в минута:</td>
                                                    <td>@inspection.BeesPerMinute</td>
                                                </tr>
                                            </table>
                                        </div>
                                    }
                                    @if (inspection.IncludeStorage)
                                    {
                                        <div class="section">
                                            <h3>Секция запаси</h3>
                                            <table>
                                                <tr>
                                                    <td>Запаси от мед:</td>
                                                    <td>@Html.DisplayFor(x => inspection.StoredHoney)</td>
                                                </tr>
                                                <tr>
                                                    <td>Запаси от прашец:</td>
                                                    <td>@Html.DisplayFor(x => inspection.StoredPollen)</td>
                                                </tr>
                                            </table>
                                        </div>
                                    }
                                    @if (inspection.IncludeSpottedProblem)
                                    {
                                        <div class="section">
                                            <h3>Секция проблеми</h3>
                                            <table>
                                                <tr>
                                                    <td>Заболяване:</td>
                                                    <td>@inspection.Disease</td>
                                                </tr>
                                                <tr>
                                                    <td>Третиране с:</td>
                                                    <td>@inspection.Treatment</td>
                                                </tr>
                                                <tr>
                                                    <td>Вредители:</td>
                                                    <td>@inspection.Pests</td>
                                                </tr>
                                                <tr>
                                                    <td>Хищници:</td>
                                                    <td>@inspection.Predators</td>
                                                </tr>
                                            </table>
                                        </div>
                                    }
                                    @if (inspection.IncludeWeatherInfo)
                                    {
                                        <div class="section">
                                            <h3>Секция метеорологични</h3>
                                            <table>
                                                <tr>
                                                    <td>Условия:</td>
                                                    <td>@inspection.Conditions</td>
                                                </tr>
                                                <tr>
                                                    <td>Температура(t°):</td>
                                                    <td>@inspection.WeatherTemperature</td>
                                                </tr>
                                                <tr>
                                                    <td>Влажност(%):</td>
                                                    <td>@inspection.WeatherHumidity</td>
                                                </tr>
                                            </table>
                                        </div>
                                    }
                                </div>
                                <div class="note">
                                    <strong><i class="far fa-sticky-note"></i> Бележка:</strong> @inspection.Note
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="all-table-responsive" style="display: none;">
                <table>
                    <thead>
                    <th>Параметър</th>
                    <th>Стойност</th>
                    </thead>
                    <tbody>
                        @foreach (var inspection in Model.AllInspections)
                        {
                            <tr>
                                <td>Дата на прегледа</td>
                                <td class="td-link">
                                    @inspection.DateOfInspection.ToString("ddd dd-MMM-yyyy")
                                </td>
                            </tr>
                            <tr>
                                <td>Вид на прегледа</td>
                                <td>@Html.DisplayFor(i => inspection.InspectionType)</td>
                            </tr>
                            <tr>
                                <td>Роил ли се е</td>
                                <td>
                                    @if (inspection.Swarmed)
                                    {
                                        <strong>@yesNo[1]</strong>
                                    }
                                    else
                                    {
                                        @yesNo[0]
                                    }
                                </td>
                            </tr>
                            <tr>
                                <td>Сила на кошера</td>
                                <td class="@powerClasses[inspection.BeehivePower.ToString().ToLower()]">
                                    @Html.DisplayFor(i => inspection.BeehivePower)
                                </td>
                            </tr>
                            <tr class="edit-row">
                                <td>
                                    Редактиране
                                </td>
                                <td class="edit">
                                    <div class="edit-container">
                                        @if (Model.BeehiveAccess == Access.ReadWrite)
                                        {
                                            <a class="edit" asp-controller="Inspection" asp-action="Edit"
                                               asp-route-id="@inspection.Id" asp-route-beehiveId="@Model.BeehiveId">
                                                <i class="far fa-edit"></i>
                                            </a>
                                            <a class="delete" onclick="ShowDeleteForm('@inspection.Id-inspection-responsive')">
                                                <i class="far fa-trash-alt"></i>
                                            </a>

                                            <div id="@inspection.Id-inspection-responsive" class="delete-form-display">

                                                <form id="form-@inspection.Id" asp-controller="Inspection" asp-action="Delete"
                                                      asp-route-id="@inspection.Id">
                                                    <a class="delete close"
                                                       onclick="HideDeleteForm('@inspection.Id-inspection-responsive')">
                                                        <i class="fas fa-times"></i>
                                                    </a>
                                                    <p>
                                                        Сигурни ли сте че искате да изтриете преглед от
                                                        <strong>@inspection.DateOfInspection.ToString("ddd dd-MMM-yyyy")</strong>?
                                                    </p>
                                                    <button type="submit" class="delete">
                                                        Изтрий <i class="far fa-trash-alt"></i>
                                                    </button>
                                                </form>
                                                <div id="@inspection.Id-back" class="content-cover"
                                                     onclick="HideDeleteForm('@inspection.Id-inspection-responsive')"></div>
                                            </div>
                                        }
                                        else
                                        {
                                            @onlyReadMsg
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            @if (!Model.AllInspections.Any())
            {
                <p class="empty-content">няма добавени прегледи</p>
            }
        </div>

        <div class="pagination">
            <ul>
                @if (this.Model.CurrentPage == 1)
                {
                    <li class="page-item disabled">
                        <span class="page-link">
                            <i class="fas fa-arrow-left"></i>
                        </span>
                    </li>
                }
                else
                {
                    <li class="page-item">
                        <a class="page-link" asp-controller="Inspection" asp-action="AllByBeehiveId" asp-route-page="@(Model.CurrentPage-1)" asp-route-id="@Model.BeehiveId">
                            <i class="fas fa-arrow-left"></i>
                        </a>
                    </li>
                }
                @for (int i = 1; i <= this.Model.PagesCount; i++)
                {
                    @if (i == this.Model.CurrentPage)
                    {
                        <li class="page-item active">
                            <span class="page-link">@i</span>
                        </li>
                    }
                    else
                    {
                        <li class="page-item">
                            <a class="page-link" asp-controller="Inspection" asp-action="AllByBeehiveId"
                               asp-route-id="@Model.BeehiveId" asp-route-page="@i">@i</a>
                        </li>
                    }
                }
                @if (this.Model.CurrentPage == this.Model.PagesCount)
                {
                    <li class="page-item disabled">
                        <span class="page-link">
                            <i class="fas fa-arrow-right"></i>
                        </span>
                    </li>
                }
                else
                {
                    <li class="page-item">
                        <a class="page-link" asp-controller="Inspection" asp-action="AllByBeehiveId"
                           asp-route-id="@Model.BeehiveId" asp-route-page="@(Model.CurrentPage + 1)">
                            <i class="fas fa-arrow-right"></i>
                        </a>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>
