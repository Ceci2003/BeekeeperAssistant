@model BeekeeperAssistant.Web.ViewModels.Queens.EditQueenInputModel
@using BeekeeperAssistant.Data.Models;
@{
    this.ViewData["Title"] = "Редактиране на майка";
}

<div class="breadcrumb">
    <div class="aside-icon" onclick="asideBurgerMenuClick();">
        <i class="fas fa-bars"></i>
    </div>
    <ul class="breadcrumb-list">
        <li class="breadcrumb-item">
            <a asp-controller="Home" asp-action="Index">...</a>
        </li>
        <li class="breadcrumb-item">
            <a href="/Apiary/@Model.ApiaryNumber">@Model.ApiaryNumber</a>
        </li>
        <li class="breadcrumb-item">
            <a asp-controller="Beehive" asp-action="ById" asp-route-beehiveId="@Model.BeehiveId" asp-route-tabPage="Queen">@Model.BeehiveNumber</a>
        </li>
        <li class="breadcrumb-item active">@ViewData["Title"]</li>
    </ul>
    <ul class="breadcrumb-list responsive">
        <li class="breadcrumb-item">
            <a asp-controller="Home" asp-action="Index">...</a>
        </li>
        <li class="breadcrumb-item">
            <a href="/Apiary/@Model.ApiaryNumber">@Model.ApiaryNumber</a>
        </li>
        <li class="breadcrumb-item">
            <a asp-controller="Beehive" asp-action="ById" asp-route-beehiveId="@Model.BeehiveId" asp-route-tabPage="Queen">@Model.BeehiveNumber</a>
        </li>
        <li class="breadcrumb-item active">Редактиране</li>
    </ul>
    <div class="breadcrumb-leave">
        <form asp-area="Identity" asp-page="/Account/Logout"
              asp-route-returnUrl="@this.Url.Action("Index", "Home", new { area = string.Empty })">
            <button type="submit" class="exit"><i class="fas fa-sign-out-alt"></i></button>
        </form>
    </div>
</div>

<div class="content">
    <div class="form-box">
        <form asp-controller="Queen" asp-action="Edit" method="post">
            <a class="back-arrow" asp-controller="Beehive" asp-action="ById" asp-route-beehiveId="@Model.BeehiveId" asp-route-tabPage="Queen">
                <i class="fas fa-arrow-left"></i>
            </a>
            <h2>@this.ViewData["Title"]</h2>
            <div class="error-msg" asp-validation-summary="All"></div>
            <div class="row-form-group">
                <div class="input-group">
                    <label asp-for="Color"></label>
                    <select asp-for="Color" asp-items="@Html.GetEnumSelectList<QueenColor>()"></select>
                    <span class="error-msg" asp-validation-for="Color"></span>
                </div>
                <div class="input-group">
                    <label asp-for="FertilizationDate"></label>
                    <input asp-for="FertilizationDate" />
                    <span class="error-msg" asp-validation-for="FertilizationDate"></span>
                </div>
            </div>
            <div class="row-form-group">
                <div class="input-group">
                    <label asp-for="GivingDate"></label>
                    <input asp-for="GivingDate" />
                    <span class="error-msg" asp-validation-for="GivingDate"></span>
                </div>
                <div class="input-group">
                    <label asp-for="QueenType"></label>
                    <select asp-for="QueenType" asp-items="@Html.GetEnumSelectList<QueenType>()"></select>
                    <span class="error-msg" asp-validation-for="QueenType"></span>
                </div>
            </div>
            <div class="row-form-group">
                <div class="input-group">
                    <label asp-for="Breed"></label>
                    <select asp-for="Breed" asp-items="@Html.GetEnumSelectList<QueenBreed>()"></select>
                    <span class="error-msg" asp-validation-for="Breed"></span>
                </div>
                <div class="input-group">
                    <label asp-for="Temperament"></label>
                    <input asp-for="Temperament" />
                    <span class="error-msg" asp-validation-for="Temperament"></span>
                </div>
            </div>
            <div class="row-form-group">
                <div class="input-group">
                    <label asp-for="Origin"></label>
                    <textarea asp-for="Origin" cols="30" rows="5"></textarea>
                    <span class="error-msg" asp-validation-for="Origin"></span>
                </div>
                <div class="input-group">
                    <label asp-for="HygenicHabits"></label>
                    <textarea asp-for="HygenicHabits" cols="30" rows="5"></textarea>
                    <span class="error-msg" asp-validation-for="HygenicHabits"></span>
                </div>
            </div>
            <input type="hidden" asp-for="BeehiveId" />
            <input type="hidden" asp-for="BeehiveNumber" />
            <input type="hidden" asp-for="ApiaryNumber" />
            <div class="btn-group">
                <input class="btn edit" type="submit" value="Редактирай" />
            </div>
        </form>
    </div>
</div>
