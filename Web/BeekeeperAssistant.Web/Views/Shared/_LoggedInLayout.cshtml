@using BeekeeperAssistant.Common
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@this.ViewData["Title"] - @GlobalConstants.SystemName</title>
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />*@
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.2/css/all.css" integrity="sha384-vSIIfh2YWi9wW0r9iZe7RJPrKwp6bG+s9QZMoITbCckVJqGCCRhc+ccxNcdpHuYu" crossorigin="anonymous">
    @* <link rel="stylesheet" href="~/css/loggedIn.min.css" asp-append-version="true" /> *@
    <link rel="stylesheet" href="~/css/loggedIn.css" asp-append-version="true" />
</head>
<body>
    <aside class="sidebar-navigation">
        <section class="user-area">
            <div class="user-image">
                <img src="https://png2.cleanpng.com/sh/7cb53ae07d9115d6aa58ee87b15e4e2c/L0KzQYm3VMI0N6Fnj5H0aYP2gLBuTfJmbZxqfeJucj3ldbbyhfVxcZ9sRdN5aXH1iX7qjPlxNZJ3jJ9teX7kfbrqTfNtcaFmiuY2NXHndYi8hPRiOZU8SKU3M0G6QYGAWcYyPWM5TaQDNkC4Roe5Wb5xdpg=/kisspng-beekeeper-beekeeping-apiary-clip-art-dynamic-clipart-5ade75dda1d703.3171079615245286056629.png" alt="">
            </div>
            <div class="user-greeting">
                <p>Good morning,</p>
                <p> @this.User.Identity.Name</p>
            </div>
            <hr>
        </section>
        <section class="navigations">
            <section class="sidebar-dropdown start">
                <div class="primary apiaries-drop-btn">
                    <span>Apiaries</span>
                    <i class="fas fa-angle-left"></i>
                </div>
                <div class="api-options hide">
                    <a class="secondary" asp-controller="Apiary" asp-action="All">
                        All
                    </a>
                    <a class="secondary" asp-controller="Apiary" asp-action="Create">
                        Create
                    </a>
                </div>
            </section>
            <section class="sidebar-dropdown">
                <div class="primary beehives-drop-btn">
                    <span>Beehives</span>
                    <i class="fas fa-angle-left"></i>
                </div>
                <div class="beehive-options hide">
                    <a class="secondary" href="#">
                        All
                    </a>
                    <a class="secondary" href="#">
                        Create
                    </a>
                </div>
            </section>
            <section class="sidebar-dropdown">
                <div class="primary queens-drop-btn">
                    <span>Queens</span>
                    <i class="fas fa-angle-left"></i>
                </div>
                <div class="queen-options hide">
                    <a class="secondary" href="#">
                        All
                    </a>
                    <a class="secondary" href="#">
                        Create
                    </a>
                </div>
            </section>
            <section class="sidebar-dropdown">
                <a class="primary" href="#">
                    Settings
                </a>
            </section>
        </section>
        <div class="leave">
            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@this.Url.Action("Index", "Home", new { area = string.Empty })">
                <button type="submit" ><i class="fas fa-sign-out-alt"></i></button>
            </form>
        </div>
    </aside>
    <main>
        @this.RenderBody()
    </main>
    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js" asp-append-version="true"></script>
    <script src="~/js/loggedInUser.js" asp-append-version="true"></script>
    @await this.RenderSectionAsync("Scripts", required: false)
</body>
</html>