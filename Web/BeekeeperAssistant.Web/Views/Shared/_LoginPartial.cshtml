@using BeekeeperAssistant.Common
@using BeekeeperAssistant.Data.Models
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{
    string activeClass = "active";
}

<nav class="navbar">
    <div class="navbar-brand">
        <a class="logo-link" asp-area="" asp-controller="Home" asp-action="Index">
            <img class="logo" src="~/img/ba_logo.svg" alt="logo" />
            <p class="link">@GlobalConstants.SystemName</p>
        </a>
    </div>
    <ul class="ul-out">
        <li>
            <a class="@if(this.ViewData["Title"].ToString() == "Начало"){@activeClass}" asp-area=""
               asp-controller="Home" asp-action="Index">Начало</a>
        </li>
        <li>
            <a class="@if(this.ViewData["Title"].ToString() == "За нас"){@activeClass}" asp-area=""
               asp-controller="Home" asp-action="About">За нас</a>
        </li>
        <li>
            <a class="@if(this.ViewData["Title"].ToString() == "Свържете се с нас"){@activeClass}" asp-area=""
               asp-controller="Home" asp-action="Contact">Свържете се с нас</a>
        </li>
    </ul>
    <ul class="ul-login-register">
        @if (!this.User.Identity.IsAuthenticated)
        {
            <li>
                <a class="login-btn" asp-area="Identity" asp-page="/Account/Login">Вход</a>
            </li>
            <li>
                <a class="register-btn" asp-area="Identity" asp-page="/Account/Register">Регистрация</a>
            </li>
        }
        else
        {
            <li>
                <a class="register-btn" asp-area="App" asp-controller="" asp-action="">Към Програмата</a>
            </li>
        }

    </ul>
</nav>
