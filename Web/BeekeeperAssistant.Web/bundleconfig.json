[
  // LoggedOut css files
  {
    "outputFileName": "wwwroot/css/loggedOut/site.min.css",
    // An array of relative input file paths. Globbing patterns supported
    "inputFiles": [
      "wwwroot/css/loggedOut/site.css"
    ]
  },
  {
    "outputFileName": "wwwroot/css/loggedOut/responsive.min.css",
    // An array of relative input file paths. Globbing patterns supported
    "inputFiles": [
      "wwwroot/css/loggedOut/responsive.css"
    ]
  },
  // LoggedIn css files
  {
    "outputFileName": "wwwroot/css/loggedOut/site.min.css",
    // An array of relative input file paths. Globbing patterns supported
    "inputFiles": [
      "wwwroot/css/loggedOut/site.css"
    ]
  },
  {
    "outputFileName": "wwwroot/css/loggedIn/responsive.min.css",
    // An array of relative input file paths. Globbing patterns supported
    "inputFiles": [
      "wwwroot/css/loggedIn/responsive.css"
    ]
  },
  {
    "outputFileName": "wwwroot/css/loggedOut/profile.min.css",
    // An array of relative input file paths. Globbing patterns supported
    "inputFiles": [
      "wwwroot/css/loggedOut/profile.css"
    ]
  },

  {
    "outputFileName": "wwwroot/js/site.min.js",
    "inputFiles": [
      "wwwroot/js/site.js"
    ],
    // Optionally specify minification options
    "minify": {
      "enabled": true,
      "renameLocals": true
    },
    // Optionally generate .map file
    "sourceMap": false
  },
  {
    "outputFileName": "wwwroot/js/loggedInUser.min.js",
    "inputFiles": [
      "wwwroot/js/loggedInUser.js"
    ],
    // Optionally specify minification options
    "minify": {
      "enabled": true,
      "renameLocals": true
    },
    // Optionally generate .map file
    "sourceMap": false
  }
]
